@inherits Neptune.Web.Views.NeptunePage.Edit
@model Neptune.Web.Views.NeptunePage.EditViewModel
@using Neptune.Web.Common

<script>
    function toggleIsEditing(isEditing) {
        document.getElementById('viewNeptunePageContent').style.display = isEditing ? 'none' : 'block';
        document.getElementById('editNeptunePageContent').style.display = isEditing ? 'block' : 'none';
    }
</script>

<div id="viewNeptunePageContent" class="neptunePageContent" style="position: relative; min-height: 30px;">
    <div class="hoverEditButton">
        <button style="margin: 10px" onclick="toggleIsEditing(true)">Edit</button>
    </div>
    @if (Model.NeptunePageContentOnLoad != null)
    {
        @Html.Raw(Model.NeptunePageContentOnLoad)
    }
    else
    {
        <div class="hoverEmptySpace"></div>
    }
</div>

<div id="editNeptunePageContent" style="display: none; margin-bottom: 16px;">
    @Html.ValidationSummary()
    @using (Html.BeginForm("Edit", "NeptunePage", new { id = Model.NeptunePageID }))
    {
        <div style="max-height: 600px; overflow-y: auto">
            @Html.TinyMCEEditorFor(x => x.NeptunePageContentHtmlString, TinyMCEExtension.TinyMCEToolbarStyle.MinimalWithImages, true, false, 200)
        </div>
        <div class="row" style="margin-top: 6px">
            <div class="col-xs-12" style="text-align: right">
                <button action="p" type="submit" class="btn btn-neptune">Save</button>
                <button type="button" onclick="toggleIsEditing(false)" class="btn btn-secondary" style="margin-left: 6px">Cancel</button>
                @Html.HiddenFor(x => x.NeptunePageID)
            </div>
        </div>
    }
</div>