@inherits Neptune.Web.Views.FieldDefinition.Edit
@model Neptune.Web.Views.FieldDefinition.EditViewModel
@using Neptune.Web.Common

@Html.ValidationSummary()
<h3>Edit Field Definition</h3>
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(x => x.FieldDefinitionValue, new {@class = "col-md-2 control-label"})
            <div class="col-md-10" style="max-height: 300px; overflow-y: auto;">
                @Html.TinyMCEEditorFor(x => x.FieldDefinitionValue, TinyMCEExtension.TinyMCEToolbarStyle.MinimalWithImages, true, ViewDataTyped.FieldDefinitionType.FieldDefinitionTypeID, 200)
            </div>
            @Html.ValidationMessageFor(x => x.FieldDefinitionValue)
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Default Label</label>
            <div class="col-md-10">@ViewDataTyped.FieldDefinitionType.FieldDefinitionTypeDisplayName</div>
        </div>
    </div>
    <div class="pull-right">
        <hr />
        <button type="submit" class="btn btn-neptune">Save</button>
        <a href="@ViewDataTyped.CancelUrl" class="btn btn-neptune">Cancel</a>
    </div>
}
