@using LtInfo.Common.HtmlHelperExtensions
@using Neptune.Web.Common.HtmlHelperExtensions
@inherits Neptune.Web.Views.User.EditRoles
@model Neptune.Web.Views.User.EditRolesViewModel

<style type="text/css">

    td, th {
        padding-left: 8px;
        padding-right: 8px;
        padding-bottom: 3px;
    }
</style>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-xs-12 col-sm-3 control-label">@Html.LabelWithSugarFor(m => m.RoleID)</div>
            <div class="col-xs-12 col-sm-9">
                @Html.DropDownListFor(m => m.RoleID, ViewDataTyped.Roles, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.RoleID)
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-12 col-sm-3"></div>
            <div class="col-xs-12 col-sm-9">
                <label>
                    @Html.CheckBoxFor(m => m.IsOCTAGrantReviewer) &nbsp;&nbsp;
                    OCTA Grant Reviewer
                </label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-12 col-sm-3 control-label">
                @Html.LabelWithSugarFor(m => m.ShouldReceiveSystemCommunications)
            </div>
            <div class="col-xs-12 col-sm-9">
                <div class="radio-inline">
                    <label>
                        @Html.RadioButtonFor(m => m.ShouldReceiveSystemCommunications, true) Yes
                    </label>
                </div>
                <div class="radio-inline">
                    <label>
                        @Html.RadioButtonFor(m => m.ShouldReceiveSystemCommunications, false) No
                    </label>
                </div>
                @Html.ValidationMessageFor(m => m.ShouldReceiveSystemCommunications)
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-12 col-sm-3 control-label">
                @Html.LabelWithSugarFor(m => m.ShouldReceiveRSBRevisionRequests)
            </div>
            <div class="col-xs-12 col-sm-9">
                <div class="radio-inline">
                    <label>
                        @Html.RadioButtonFor(m => m.ShouldReceiveRSBRevisionRequests, true) Yes
                    </label>
                </div>
                <div class="radio-inline">
                    <label>
                        @Html.RadioButtonFor(m => m.ShouldReceiveRSBRevisionRequests, false) No
                    </label>
                </div>
                @Html.ValidationMessageFor(m => m.ShouldReceiveRSBRevisionRequests)
            </div>
        </div>
    </div>
    @Html.HiddenFor(m => m.PersonID)
}
