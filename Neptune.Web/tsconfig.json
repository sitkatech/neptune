{
    "compileOnSave": false,
    "compilerOptions": {
      "baseUrl": "./",
      "outDir": "./dist/out-tsc",
      "esModuleInterop": true,
      "sourceMap": true,
      "declaration": false,
      "moduleResolution": "bundler",
      "experimentalDecorators": true,
      "importHelpers": true,
      "target": "ES2022",
      "module": "ES2022",
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "ES2022",
        "dom"
      ],
      "useDefineForClassFields": false
    },
    "angularCompilerOptions": {
        "strictTemplates": true
    }
}
