@inherits Neptune.Web.Views.Delineation.DelineationMapTemplates

<template id="selectedAssetControlTemplate">
    <div class="leaflet-bar leaflet-control neptune-leaflet-control" id="selectedAssetControl">
        <h4>Selected Asset</h4>
        <span id="noAssetSelected" class="systemText">Select an asset on the map to see options</span>
        <div id="selectedBmpInfo" class="hiddenControlElement">
            <span id="selectedBmpName">BMP Name: <a id="selectedBMPDetailLink"></a> </span> <br />
            <span>BMP Type: <span id="selectedBMPType"></span></span><br />
            <hr>
            <strong>Drainage Area</strong> <br />
            <span>Delineation Type: <span id="delineationType"></span></span> <br />
            <span>Area: <span id="delineationArea">-</span></span>
            <button class="btn btn-sm btn-neptune" id="delineationButton" type="button">Delineate Drainage Area</button>
            <div class="hiddenControlElement" id="saveAndCancelButtonsWrapper">
                <button class="btn btn-sm btn-neptune" id="saveDelineationButton" type="button">Save Delineation</button>
                <button class="btn btn-sm btn-neptune" id="cancelDelineationButton" type="button">Cancel</button>
            </div>
        </div>
    </div>
</template>
<template id="beginDelineationControlTemplate">
    <div class="leaflet-bar leaflet-control neptune-leaflet-control" id="beginDelineationControl">
        <div class="row">
            <div class="col-sm-10"><h4>Delineate Drainage Area</h4></div>
            <div class="col-sm-2 text-right"><button id="closeBeginDelineationControlButton" class="btn btn-sm btn-neptune">x</button></div>
        </div>
        <div id="beginDelineationOptions">
            @*The values of these radios must correspond to the values used in BeginDelineation.delineate*@
            <label>1. Select the type of flow this BMP will receive</label><br>
            <label class="group"><input type="radio" name="flowOption" id="flowOptionDistributed" value="Distributed"> Receives Local Surface Flow Only (Distributed)</label><br>
            <label class="group"><input type="radio" name="flowOption" id="flowOptionCentralized" value="Centralized"> Receives Both Piped Flow and Local Surface Flow (Centralized)</label>
            <hr>
            <label>2. Choose a delineation option</label><br>
            <span id="noFlowOptionSelectedText" class="systemText">Select a flow type above to see delineations options. <br/><br/></span>
            <div id="delineationTypeOptions">
                <label class="group" id="delineationOptionAuto"><input type="radio" name="delineationOption"  value="autoDelineate"> Delineate Automatically from DEM <br></label>
                <label class="group" id="delineationOptionDraw"><input type="radio" name="delineationOption"  value="drawDelineate"> <span id="delineationOptionDrawText"></span> <br></label>
                <label class="group" id="delineateOptionTrace" ><input type="radio" name="delineationOption" value="traceDelineate"> Trace Network Catchments <br></label>
            </div>
        </div>
        <div class="text-right">
            <button id="continueDelineationButton" class="btn btn-sm btn-neptune" disabled="disabled" type="button">Delineate</button>
            <button id="cancelDelineationButton" class="btn btn-sm btn-neptune" type="button">Cancel</button>
        </div>
    </div>
</template>
