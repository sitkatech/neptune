@inherits Neptune.Web.Views.User.EditRoles

<style type="text/css">
    td, th {
        padding-left: 8px;
        padding-right: 8px;
        padding-bottom: 3px;
    }
</style>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.RoleID, new {@class = "col-xs-12 col-sm-3 control-label"})
            <div class="col-xs-12 col-sm-9">
                @Html.DropDownListFor(m => m.RoleID, ViewDataTyped.Roles, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.RoleID)
            </div>
        </div>
            <div class="form-group">
                @Html.LabelFor(m => m.DroolToolRoleID, new {@class = "col-xs-12 col-sm-3 control-label"})
                <div class="col-xs-12 col-sm-9">
                @if (ViewDataTyped.IsAdmin)
                {
                    @Html.DropDownListFor(m => m.DroolToolRoleID, ViewDataTyped.DroolToolRoles, new {@class = "form-control"})
                    @Html.ValidationMessageFor(m => m.DroolToolRoleID)
                }
                else
                {
                    @ViewDataTyped.CurrentDroolToolRole.DroolToolRoleDisplayName
                    @Html.HiddenFor(m => m.DroolToolRoleID)
                }
                </div>
            </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ShouldReceiveSystemCommunications, new {@class = "col-xs-12 col-sm-3 control-label"})
            <div class="col-xs-12 col-sm-9">
                <div class="radio-inline">
                    <label>
                        @Html.RadioButtonFor(m => m.ShouldReceiveSystemCommunications, true) Yes
                    </label>
                </div>
                <div class="radio-inline">
                    <label>
                        @Html.RadioButtonFor(m => m.ShouldReceiveSystemCommunications, false) No
                    </label>
                </div>
                @Html.ValidationMessageFor(m => m.ShouldReceiveSystemCommunications)
            </div>
        </div>
    </div>
    @Html.HiddenFor(m => m.PersonID)
}
