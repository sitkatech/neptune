@using Neptune.Web.Models
@using LtInfo.Common.BootstrapWrappers
@using LtInfo.Common.HtmlHelperExtensions
@using LtInfo.Common.ModalDialog
@using Microsoft.Web.Mvc
@using Neptune.Web.Security
@inherits Neptune.Web.Views.TreatmentBMPType.Detail
@section JavascriptAndStylesContent
{
}

@section RightOfPageTitle
{
    @if (new NeptuneEditFeature().HasPermissionByPerson(ViewDataTyped.CurrentPerson))
    {
        <a class="pull-right" href="@ViewDataTyped.TreatmentBMPType.GetEditUrl()">@BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-edit") Edit Treatment BMP Type</a>
    }
}
@if (ViewDataTyped.UserHasTreatmentBMPTypeManagePermissions)
{
    <div>
        <a class="btn backButton" href="@ViewDataTyped.TreatmentBMPTypeIndexUrl">@BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-chevron-left") Back to all @FieldDefinition.TreatmentBMPType.GetFieldDefinitionLabelPluralized()</a>
    </div>
}

<div class="row">
    <div class="col-xs-12 col-sm-12">
        <div class="panel panelNeptune">
            <div class="panel-heading panelTitle">
                Basics
            </div>
            <div class="panel-body">
                <div class="row">
                    <label class="col-sm-3 control-label text-right">@Html.Label("Name")</label>
                    <div class="col-sm-9">@ViewDataTyped.TreatmentBMPType.TreatmentBMPTypeName</div>
                </div>
                
            </div>
        </div>
    </div>
</div>
 