@using LtInfo.Common.HtmlHelperExtensions
@using Neptune.Web.Common
@using Neptune.Web.Controllers
@using Neptune.Web.Models
@using Newtonsoft.Json.Linq
@inherits Neptune.Web.Views.TreatmentBMPType.Edit

<script type="text/javascript" src="@Url.Content("~/Views/TreatmentBMPType/EditTreatmentBMPTypeController.js")"></script>
<script type="text/javascript">
    // <![CDATA[
    angular.module("NeptuneApp")
        .factory("angularModelAndViewData",
            function()
            {
                return {
                    AngularModel: @Html.Raw(JObject.FromObject(Model)),
                    AngularViewData: @Html.Raw(JObject.FromObject(ViewDataTyped.ViewDataForAngular))
                };
            });

    // ]]>
</script>

<form method="POST" action="@ViewDataTyped.SubmitUrl" ng-app="NeptuneApp" id="EditTreatmentBMPTypeControllerApp" ng-controller="EditTreatmentBMPTypeController" ng-submit="submit()" name="treatmentBMPTypeForm">
    <div class="formPage">
        <div class="row">
            <div class="col-xs-12">
                <div class="validationError">
                    @Html.ValidationSummary()
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-sm-3 control-label">
                            @Html.LabelWithSugarFor(m => m.TreatmentBMPTypeName)
                        </div>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(m => m.TreatmentBMPTypeName, new { @class = "form-control", style = "width:100%" })
                            @Html.ValidationMessageFor(m => m.TreatmentBMPTypeName)
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">Observation Type to Add:</label>
            <div class="input-group">
                <select ng-model="ObservationTypeToAdd"
                        data-live-search="true"
                        data-container="body"
                        data-title="Select an Observation Type to Add"
                        data-width="100%" selectpicker
                        data-ng-options="observationType as observationType.ObservationTypeName for observationType in filteredObservationTypes() track by observationType.ObservationTypeID">
                    <option value="null" disabled selected>Select an Observation Type to Add</option>
                </select>
                <span class="input-group-btn">
                    <button class="btn btn-neptune" type="button" ng-click="addRow()">
                        <span class="glyphicon glyphicon-plus"></span> Add
                    </button>
                </span>
            </div>
        </div>
        <div style="overflow-x: auto" class="form-inline">
            <table class="table" style="margin-top: 20px; overflow: scroll" ng-show="AngularModel.TreatmentBMPTypeObservationTypeSimples.length > 0">
                <tr>
                    <th></th>
                    <th>@Html.LabelWithSugarFor(FieldDefinition.ObservationType)</th>
                    <th style="text-align: right">@Html.LabelWithSugarFor(FieldDefinition.AssessmentScoreWeight)</th>
                </tr>
                <tr ng-repeat="treatmentBMPTypeObservationTypeSimple in AngularModel.TreatmentBMPTypeObservationTypeSimples | orderBy:[getObservationTypeName]">
                    <td>
                        <span class="glyphicon glyphicon-trash blue" title="Remove row" alt="Remove row" ng-click="deleteRow(treatmentBMPTypeObservationTypeSimple)" style="cursor: pointer"></span>
                    </td>
                    <td ng-bind="getObservationTypeName(treatmentBMPTypeObservationTypeSimple)"></td>
                    <td style="text-align: right">
                        <input type="number" ng-model="treatmentBMPTypeObservationTypeSimple.AssessmentScoreWeight" class="form-control " />
                    </td>                    
                </tr>
                <tr>
                    <th colspan="2">Total</th>
                    <th style="text-align: right" ng-bind="getWeightTotal()">
                    </th>                   
                </tr>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12" style="text-align: right">
            <hr />
            <a href="@ViewDataTyped.TreatmentBMPTypeIndexUrl" class="btn btn-neptune">Cancel</a>
            <button type="submit" class="btn btn-neptune">Save</button>
        </div>
        @Html.HiddenFor(m => m.TreatmentBMPTypeID)
    </div>
</form>
