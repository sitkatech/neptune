
@using LtInfo.Common.ModalDialog
@using Neptune.Web.Views.Shared
@inherits ViewPageContent

@if (ViewDataTyped.ShowEditButton)
{
    <div class="neptunePageContent" style="position: relative; min-height: 30px;">
        <div class="hoverEditButton">
            <div style="margin-top: 10px">
                @ModalDialogFormHelper.ModalDialogFormLink("Edit", ViewDataTyped.EditPageContentUrl, string.Format("Edit Content for {0}", ViewDataTyped.NeptunePage.NeptunePageType.NeptunePageTypeDisplayName), 900, "Save", "Cancel", new List<string> { "btn-neptune btn-xs" }, null, null)                
            </div>
        </div>
        @if (ViewDataTyped.NeptunePage.HasNeptunePageContent())
        {
            @Html.Raw(ViewDataTyped.NeptunePage.NeptunePageContentHtmlString)
        }
        else
        {
            <div class="hoverEmptySpace"></div>
        }        
    </div>
}
else
{
    <div>
        @Html.Raw(ViewDataTyped.NeptunePage.NeptunePageContentHtmlString)
    </div>
}
