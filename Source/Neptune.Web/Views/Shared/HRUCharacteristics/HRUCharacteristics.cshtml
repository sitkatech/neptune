@using LtInfo.Common.HtmlHelperExtensions
@using Neptune.Web.Models
@inherits Neptune.Web.Views.Shared.HRUCharacteristics.HRUCharacteristics

<table class="table table-responsive" style="text-align:center">
    <thead>
        <tr>
            <th style="text-align:center">@Html.LabelWithSugarFor(FieldDefinition.LandUse)</th>
            <th style="text-align:center">@Html.LabelWithSugarFor(FieldDefinition.Area)</th>
            <th style="text-align:center">@Html.LabelWithSugarFor(FieldDefinition.ImperviousArea)</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var summary in ViewDataTyped.HRUCharacteristicsSummaries)
    {
        <tr>
            <td>@summary.LandUse</td>
            <td>@summary.Area</td>
            <td>@summary.ImperviousCover</td>
        </tr>
    }
    <tr>
        <td>@ViewDataTyped.HRUCharacteristicsTotal.LandUse</td>
        <td>@ViewDataTyped.HRUCharacteristicsTotal.Area</td>
        <td>@ViewDataTyped.HRUCharacteristicsTotal.ImperviousCover</td>
    </tr>
    </tbody>
</table>