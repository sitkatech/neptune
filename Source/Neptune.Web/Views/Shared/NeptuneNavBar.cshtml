@using Neptune.Web.Models
@using Neptune.Web.Views.Shared
@using LtInfo.Common.ModalDialog
@using Neptune.Web.Common
@inherits NeptuneNavBar

<div style="margin-right: 15px;">
    <style>
        #siteExplorerAreaLink {
            font-family: "Montserrat", serif;
            font-size: 20px;
            font-weight: bold;
            color: rgb(119,207,220);
            border-left: 2px solid rgb(0,143,170);
            vertical-align: middle;
            padding-left: 10px;
            padding-right: 10px;
            margin-top: 10px;
            width: 150px;
        }

        .siteNavLinks {
            margin-top: 8px;
        }

        .siteNavLinks .list-inline li {
            margin-left: 10px;
            margin-bottom: 10px;
        }

        .siteNavLinks a {
            color: rgb(0,153,171);
            text-decoration: none;
            font-weight: bold;
            cursor: pointer;
            font-family: "Open Sans", serif;
            font-size: 14px;
        }

        .siteNavLinks .dropdown-menu {
            border: none;
            background-color: white;
            border-radius: 0;
            color: white;
        }

        .siteNavLinks .dropdown-menu li {
            margin-left: 0px;
        }

        .siteNavLinks .dropdown-menu li a {
            font-weight: 600;
            color: black;
            font-size: 14px;
            margin-bottom: 5px;
        }

        .siteNavLinks .dropdown-menu li a:hover {
            background-color: rgb(98, 136, 175);
        }

        .laketahoeinfo-home p, .laketahoeinfo-home a {
            position: relative;
            margin-left: auto;
            margin-right: auto;
            text-decoration: none;
            color: white;
        }
    </style>
    <nav class="navbar navbar-light">
        <div class="container-fluid">
            <div>
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle headerImage noHighlight" data-toggle="dropdown" role="button">
                            <img class="headerLogo" src="/Content/img/OCStormwater/banner_logo.png" style="width: 318px; display: inline-block;" />
                            @if (ViewDataTyped.ShowLinkToArea)
                            {
                                <div id="siteExplorerAreaLink" style="display: inline-block;">
                                    @ViewDataTyped.NeptuneArea.NeptuneAreaDisplayName
                                </div>
                            }
                            <div id="dropdownMenuIcon" style="display: inline-block;">
                                <span class="glyphicon glyphicon-menu-down" style="padding-right: 5px; padding-left: 5px;"></span>
                            </div>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="siteExplorerAreaLink">
                            <li><a href="@ViewDataTyped.HomeUrl">OC Stormwater Tools Home</a></li>
                            <li><hr/></li>
                            @foreach (var neptuneArea in NeptuneArea.All.Where(x => x.ShowOnPrimaryNavigation).OrderBy(x => x.NeptuneAreaDisplayName))
                            {
                                if (neptuneArea.IsAreaVisibleToPerson(ViewDataTyped.CurrentPerson))
                                {
                                    <li>
                                        <a href="@neptuneArea.GetHomeUrl()" title="">
                                            <img src="@neptuneArea.GetIconUrl()" style="height: 35px; padding-right: 15px"/>
                                            @neptuneArea.NeptuneAreaDisplayName
                                        </a>
                                    </li>
                                }
                            }
                        </ul>
                    </li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    @if (!Request.IsAuthenticated || ViewDataTyped.CurrentPerson == null)
                    {
                        <li class="topRightMenuParent"><a class="topRightMenu" href="@ViewDataTyped.LogInUrl">Log in</a></li>
                    }
                    @if (Request.IsAuthenticated && ViewDataTyped.CurrentPerson != null)
                    {
                        <li class="topRightMenuParent dropdown">
                            <a class="dropdown-toggle topRightMenu" id="dropdownMenuUser" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                Welcome&nbsp;&nbsp;@ViewDataTyped.CurrentPerson.GetFullNameFirstLast()
                                <span class="glyphicon glyphicon-menu-down"></span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuUser">
                                <li><a href="@ViewDataTyped.CurrentPerson.GetDetailUrl()">Account</a></li>
                                <li><a href="@ViewDataTyped.LogOutUrl">Log out</a></li>
                            </ul>
                        </li>
                    }
                    <li class="topRightMenuParent"><a class="topRightMenu" href="@ViewDataTyped.AboutUrl">About</a></li>
                    @foreach (var topLevelMenu in ViewDataTyped.TopLevelNeptuneMenus)
                    {
                        @topLevelMenu.RenderMenu()
                    }
                </ul>
            </div>
        </div>
    </nav>
</div>