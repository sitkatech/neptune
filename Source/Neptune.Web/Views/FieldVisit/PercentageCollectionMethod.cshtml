@using LtInfo.Common.BootstrapWrappers
@using Newtonsoft.Json
@using Newtonsoft.Json.Linq
@inherits Neptune.Web.Views.FieldVisit.PercentageCollectionMethod

@{
    @SetLayout("SiteLayout.cshtml", ViewDataTyped)
}

<style>
    .red {
        color: red;
    }
</style>

<script type="text/javascript" src="@Url.Content("~/Views/FieldVisit/PercentageCollectionMethodController.js")"></script>
<script type="text/javascript">
    // <![CDATA[
    angular.module("NeptuneApp").factory("angularModelAndViewData",
        function() {
            return {
                AngularModel: @Html.Raw(JObject.FromObject(Model).ToString(Formatting.None)),
                AngularViewData: @Html.Raw(JObject.FromObject(ViewDataTyped.ViewDataForAngular).ToString(Formatting.None))
            };
        });
    angular.bootstrap(jQuery("[ng-controller=\"PercentageCollectionMethodController\"]"), ["NeptuneApp"]);

    jQuery(document).ready(function() {
        HookupCheckIfFormIsDirtyNoDisable(undefined);
    });
    // ]]>
</script>

<form method="POST" action="@ViewDataTyped.SubmitUrl" ng-app="NeptuneApp" id="PercentageCollectionMethodControllerApp" ng-controller="PercentageCollectionMethodController" ng-init="initializeData()" ng-submit="submit()" name="observationForm">
    <div class="row">
        <div class="col-xs-12">
            <div class="form-horizontal">
                <div>
                    @ViewDataTyped.AssessmentDescription
                </div>
                <br />
                <div>
                    <table class="table observationList" ng-hide="ObservationData.SingleValueObservations.length === 0">
                        <thead>
                            <tr class="row">
                                <th class="col-xs-3">@Html.Label("Measurement Type")</th>
                                <th class="col-xs-2">@Html.Label(ViewDataTyped.MeasurementUnitLabelAndUnit)</th>
                                <th class="col-xs-7">@Html.Label("Notes")</th>
                            </tr>
                        </thead>
                        <tr class="row" ng-repeat="observation in ObservationData.SingleValueObservations track by $index">
                            <td class="col-xs-3">
                                <span ng-bind="observation.PropertyObserved"></span>
                            </td>
                            <td class="col-xs-2">
                                <input name="observation{{$index}}" class="form-control " type="number" step="any" ng-model="observation.ObservationValue" min="0" max="100" required />
                            </td>
                            <td class="col-xs-7">
                                <input class="form-control" type="text" ng-model="observation.Notes" style="width: 100%" />
                            </td>
                        </tr>
                        <tfoot>
                            <tr class="row">
                                <td class="col-xs-3">
                                    Other
                                </td>
                                <td class="col-xs-2 text-center" style="font-weight: bold" ng-class="percentIsNegative() ? 'red' : ''">
                                    {{calculateRemainingPercent()}}%
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <hr />
        <div class="col-xs-12 col-sm-2">
            <div><sup>@Html.Raw(BootstrapHtmlHelpers.RequiredIcon)</sup> Required Field</div>
        </div>
        <div class="col-xs-12 col-sm-10" style="text-align: right">
            <button type="submit" class="btn btn-neptune" value="false" name="@Html.NameFor(x => x.AutoAdvance)" ng-disabled="percentIsNegative()">Save</button>
            <button type="submit" class="btn btn-neptune" value="true" name="@Html.NameFor(x => x.AutoAdvance)" ng-disabled="percentIsNegative()">Save &amp; Continue <i class="glyphicon glyphicon-chevron-right"></i></button>
        </div>

        @Html.HiddenFor(m => m.TreatmentBMPAssessmentID)
        @Html.HiddenFor(m => m.TreatmentBMPAssessmentObservationTypeID)
        <input type="hidden" name="@Html.NameFor(m => m.ObservationData)" ng-value="AngularModel.ObservationData" />
    </div>
</form>
