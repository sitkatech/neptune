@using System.Web.Mvc.Html
@using LtInfo.Common.HtmlHelperExtensions
@inherits Neptune.Web.Views.TreatmentBMPBenchmarkAndThreshold.WetBasinVegetativeCover

@using (Html.BeginForm())
{
    <div class="form-horizontal">

        <h4>Threshold</h4>
        <div class="systemText">
            Threshold values are the maximum and minimum percent cover of wetland and riparian species acceptable. The default minimum threshold value is 40%. The default maximum threshold value is 75%.
        </div>
        <h4>Benchmark</h4>
        <div class="systemText">
            The benchmark vegetative cover value is calculated as the mid-point between the minimum and maximum vegetaion cover thresholds. The default minimum and maximum threshold values correspond to a calculated default benchmark value of 57.5%.
        </div>
        <div class="form-group">
            <div class="col-sm-6 control-label">
                @Html.LabelWithSugarFor(m => m.ThresholdValueMin)
            </div>
            <div class="col-sm-6">
                @Html.TextBoxFor(m => m.ThresholdValueMin, new { placeholder = "default is 40" })
                @Html.ValidationMessageFor(m => m.ThresholdValueMin)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-6 control-label">
                @Html.LabelWithSugarFor(m => m.ThresholdValueMax)
            </div>
            <div class="col-sm-6">
                @Html.TextBoxFor(m => m.ThresholdValueMax, new { placeholder = "default is 75" })
                @Html.ValidationMessageFor(m => m.ThresholdValueMax)
            </div>
        </div>
    </div>
    <div class="wizardButtonGroup">
        <hr>
        <button type="submit" class="btn btn-neptune" value="false" name="@Html.NameFor(x => x.AutoAdvance)">Save</button>
        <button type="submit" class="btn btn-neptune" value="true" name="@Html.NameFor(x => x.AutoAdvance)">Save &amp; Continue</button>
    </div>
    @Html.HiddenFor(m => m.TreatmentBMPID)
}

<script type="text/javascript">
    // <![CDATA[

    jQuery(document).ready(function () {
        jQuery('input').addClass("form-control");
        jQuery('input').css("width", "auto");
        HookupCheckIfFormIsDirtyNoDisable(undefined);
    });
    // ]]>
</script>
