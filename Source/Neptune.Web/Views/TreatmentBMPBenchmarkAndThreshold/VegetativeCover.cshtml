@using System.Web.Mvc.Html
@using Neptune.Web.Models
@using LtInfo.Common.HtmlHelperExtensions
@inherits Neptune.Web.Views.TreatmentBMPBenchmarkAndThreshold.VegetativeCover

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>Benchmark</h4>
        @if (ViewDataTyped.TreatmentBMP.TreatmentBMPType == TreatmentBMPType.DryBasin || ViewDataTyped.TreatmentBMP.TreatmentBMPType == TreatmentBMPType.InfiltrationBasin)
        {
            <div class="systemText">
                Benchmark vegetative cover value is the desired percent cover of <strong>wetland and riparian species</strong>. The desired vegetative cover value for @ViewDataTyped.TreatmentBMP.TreatmentBMPType.TreatmentBMPTypeDisplayName is zero. 
            </div>
        }
        else if (ViewDataTyped.TreatmentBMP.TreatmentBMPType == TreatmentBMPType.BioFilter)
        {
            <div class="systemText">
                Benchmark vegetative cover value is the desired percent cover of <strong>wetland and riparian and grass species</strong>. The desired vegetative cover value for @ViewDataTyped.TreatmentBMP.TreatmentBMPType.TreatmentBMPTypeDisplayName is 100%. 
            </div>
        }
        else if (ViewDataTyped.TreatmentBMP.TreatmentBMPType == TreatmentBMPType.InfiltrationFeature)
        {
            <div class="systemText">
                Benchmark vegetative cover value is the desired percent cover of <strong>wetland and riparian, grass, and tree species</strong>. The desired vegetative cover value for @ViewDataTyped.TreatmentBMP.TreatmentBMPType.TreatmentBMPTypeDisplayName is zero. 
            </div>
        }
        else
        {
            <div class="systemText">
                This type of BMP does not require Vegetative Cover benchmark and threshold Observations.
            </div>
        }
        <div class="form-group">
            <div class="col-sm-6 control-label">
                @Html.LabelWithSugarFor(m => m.BenchmarkValue)
            </div>
            <div class="col-sm-6">
                @Html.TextBoxFor(m => m.BenchmarkValue, new { placeholder = ViewDataTyped.DefaultBenchmarkPlaceholder })
                @Html.ValidationMessageFor(m => m.BenchmarkValue)
            </div>
        </div>

        <h4>Threshold</h4>
        @if (ViewDataTyped.TreatmentBMP.TreatmentBMPType == TreatmentBMPType.DryBasin || ViewDataTyped.TreatmentBMP.TreatmentBMPType == TreatmentBMPType.InfiltrationBasin)
        {
            <div class="systemText">
                Threshold values are the maximum acceptable percent cover of <strong>wetland and riparian species</strong>. @ViewDataTyped.DefaultThresholdText
            </div>
        }
        else if (ViewDataTyped.TreatmentBMP.TreatmentBMPType == TreatmentBMPType.BioFilter)
        {
            <div class="systemText">
                Threshold values are the minimum acceptable percent cover of <strong>wetland and riparian and grass species</strong>. @ViewDataTyped.DefaultThresholdText
            </div>
        }
        else if (ViewDataTyped.TreatmentBMP.TreatmentBMPType == TreatmentBMPType.InfiltrationFeature)
        {
            <div class="systemText">
                Threshold values are the maximum acceptable percent cover of <strong>wetland and riparian, grass, and tree species</strong>. @ViewDataTyped.DefaultThresholdText
            </div>
        }
        else
        {
            <div class="systemText">
                This type of BMP does not require Vegetative Cover benchmark and threshold observations.
            </div>
        }
        <div class="form-group">
            <div class="col-sm-6 control-label">
                @Html.LabelWithSugarFor(m => m.ThresholdValue)
            </div>
            <div class="col-sm-6">
                @Html.TextBoxFor(m => m.ThresholdValue, new { placeholder = ViewDataTyped.DefaultThresholdPlaceholder })
                @Html.ValidationMessageFor(m => m.ThresholdValue)
            </div>
        </div>

    </div>
    <div class="wizardButtonGroup">
        <hr>
        <button type="submit" class="btn btn-neptune" value="false" name="@Html.NameFor(x => x.AutoAdvance)">Save</button>
        <button type="submit" class="btn btn-neptune" value="true" name="@Html.NameFor(x => x.AutoAdvance)">Save &amp; Continue</button>
    </div>
    @Html.HiddenFor(m => m.TreatmentBMPID)
}

<script type="text/javascript">
    // <![CDATA[

    jQuery(document).ready(function () {
        jQuery('input').addClass("form-control");
        jQuery('input').css("width", "auto");
        HookupCheckIfFormIsDirtyNoDisable(undefined);
    });
    // ]]>
</script>
