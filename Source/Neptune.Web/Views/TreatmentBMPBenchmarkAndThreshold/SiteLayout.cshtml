@using Neptune.Web.Views.TreatmentBMPBenchmarkAndThreshold
@inherits SiteLayout

@{
    SetLayout("~/Views/Shared/SiteLayout.cshtml", ViewDataTyped);
}

<div>
    <div class="row wizard">
        <div class="col-xs-12 col-sm-3 col-md-3">
            <nav id="wizardNav">
                <ul class="nav nav-stacked">
                    <li class="@(ViewDataTyped.SectionName == InstructionsViewData.InstructionsSectionName ? "active" : string.Empty)">
                        <a href="@ViewDataTyped.InstructionsUrl"><span style="margin-left: 22px">Instructions</span></a>
                    </li>
                    @foreach (var TreatmentBMPAssessmentObservationType in ViewDataTyped.TreatmentBMP.TreatmentBMPType.GetObservationTypes().OrderBy(x => x.TreatmentBMPAssessmentObservationTypeName).Where(x => x.HasBenchmarkAndThreshold))
                    {
                        <li class="@(ViewDataTyped.SectionName == TreatmentBMPAssessmentObservationType.TreatmentBMPAssessmentObservationTypeName ? "active" : string.Empty)">
                            <a href="@TreatmentBMPAssessmentObservationType.BenchmarkAndThresholdUrl(ViewDataTyped.TreatmentBMP)">                                
                                @if (ViewDataTyped.TreatmentBMP.IsBenchmarkAndThresholdCompleteForObservationType(TreatmentBMPAssessmentObservationType))
                                {
                                    <span class="glyphicon glyphicon-ok field-validation-success text-left" style="margin-right: 4px"></span>
                                }
                                else
                                {
                                    <span class="glyphicon glyphicon-exclamation-sign field-validation-warning text-left" style="margin-right: 4px"></span>
                                }
                                @TreatmentBMPAssessmentObservationType.TreatmentBMPAssessmentObservationTypeName
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>

        <div id="wizardContent" class="col-xs-12 col-sm-9 col-md-9">
            <div class="wizardHeader">
                <h2>@ViewDataTyped.SectionName</h2>
                <hr>
            </div>
            <div class="wizardMain">
                @RenderBody()
            </div>

        </div>
    </div>

</div>
