@using LtInfo.Common.BootstrapWrappers
@using Newtonsoft.Json.Linq
@inherits Neptune.Web.Views.TreatmentBMPAssessment.DiscreteCollectionMethod

@{
    SetLayout("SiteLayout.cshtml", ViewDataTyped);
}

<script type="text/javascript" src="@Url.Content("~/Views/TreatmentBMPAssessment/DiscreteCollectionMethodController.js")"></script>
<script type="text/javascript">
    // <![CDATA[
    angular.module("NeptuneApp")
        .factory("angularModelAndViewData",
            function()
            {
                return {
                    AngularModel: @Html.Raw(JObject.FromObject(Model)),
                    AngularViewData: @Html.Raw(JObject.FromObject(ViewDataTyped.ViewDataForAngular))
                    };
            });

    jQuery(document).ready(function () {       
        HookupCheckIfFormIsDirtyNoDisable(undefined);
    });
    // ]]>
</script>

<form method="POST" action="@ViewDataTyped.SubmitUrl" ng-app="NeptuneApp"id="DiscreteCollectionMethodControllerApp" ng-controller="DiscreteCollectionMethodController" ng-init="initializeWithEmptyRows()" ng-submit="submit()" name="observationForm">
    <div class="row">
        <div class="col-xs-12">
            <div class="form-horizontal">
                <div>
                    @ViewDataTyped.AssessmentDescription
                </div>
                <br />
                <div>
                    <table class="table observationList" ng-hide="ObservationData.SingleValueObservations.length === 0">
                        <thead>
                            <tr class="row">
                                <th class="col-xs-1"></th>
                                <th class="col-xs-3">@Html.Label("Measurement Type")</th>
                                <th class="col-xs-2">@Html.Label(ViewDataTyped.MeasurementUnitLabelAndUnit)</th>
                                <th class="col-xs-6">@Html.Label("Notes")</th>
                            </tr>
                        </thead>
                        <tr class="row" ng-repeat="observation in ObservationData.SingleValueObservations track by $index">
                            <td class="col-xs-1">
                                <span class="glyphicon glyphicon-trash blue"
                                      title="Remove Observation"
                                      alt="Remove Observation"
                                      ng-click="deleteObservation(observation)"
                                      style="cursor: pointer">
                                </span>
                            </td>
                            <td class="col-xs-3" ng-if="AngularViewData.PropertiesToObserve.length == 1">
                                <span ng-bind="AngularViewData.PropertiesToObserve[0].DisplayName" ng-model="observation.PropertyObserved" ng-init="observation.PropertyObserved = AngularViewData.PropertiesToObserve[0].DisplayName"></span>
                            </td>
                            <td class="col-xs-3" ng-if="AngularViewData.PropertiesToObserve.length > 1">
                                <select style="width: 100%" ng-model="observation.PropertyObserved"
                                        class="form-control"
                                        ng-required="true">
                                    <option ng-repeat="type in AngularViewData.PropertiesToObserve"
                                            ng-selected="observation.PropertyObserved == type.DisplayName"
                                            ng-bind="type.DisplayName"
                                            value="{{type.DisplayName}}"></option>
                                </select>
                            </td>
                            <td class="col-xs-2">
                                <input class="form-control" type="number" min="{{AngularViewData.MinimumValueOfObservations}}" max="{{AngularViewData.MaximumValueOfObservations}}" ng-model="observation.ObservationValue" style="width: 100%; text-align: right" required />
                            </td>
                            <td class="col-xs-6">
                                <input class="form-control" type="text" ng-model="observation.Notes" style="width: 100%" />
                            </td>
                        </tr>                        
                    </table>
                    <button class="btn btn-neptune pull-right" type="button" ng-click="addObservation()" ng-disabled="disableAddObservation()">
                        <span class="glyphicon glyphicon-plus"></span>Add Observation
                    </button>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <hr />
        <div class="col-xs-12 col-sm-2">
            <div><sup>@Html.Raw(BootstrapHtmlHelpers.RequiredIcon)</sup> Required Field</div>
        </div>
        <div class="col-xs-12 col-sm-10" style="text-align: right">
            <button type="submit" class="btn btn-neptune" value="false" name="@Html.NameFor(x => x.AutoAdvance)">Save</button>
            <button type="submit" class="btn btn-neptune" value="true" name="@Html.NameFor(x => x.AutoAdvance)">Save &amp; Continue <i class="glyphicon glyphicon-chevron-right"></i></button>
        </div>

        @Html.HiddenFor(m => m.TreatmentBMPAssessmentID)
        @Html.HiddenFor(m => m.ObservationTypeID)
        <input type="hidden" name="@Html.NameFor(m => m.ObservationData)" ng-value="AngularModel.ObservationData" />
    </div>
</form>
