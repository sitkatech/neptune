@using Neptune.Web.Models
@inherits Neptune.Web.Views.TreatmentBMPAssessment.SiteLayout

@{
    SetLayout("~/Views/Shared/SiteLayout.cshtml", ViewDataTyped);
}

<div>
    <div class="row wizard">
        <div class="col-xs-12 col-sm-3">
            <nav id="wizardNav">
                <ul class="nav nav-stacked">
                    <li class="@(ViewDataTyped.SectionName =="Assessment Information" ? "active" : string.Empty)">
                        <a  href="@ViewDataTyped.AssessmentInformationUrl"><span style="margin-left: 22px">Assessment Information</span></a>
                    </li>
                    @foreach (var observationType in ViewDataTyped.TreatmentBMP.TreatmentBMPType.GetObservationTypes().OrderBy(x => x.ObservationTypeName))
                    {
                        <li class="@(ViewDataTyped.SectionName == observationType.ObservationTypeName ? "active" : string.Empty)">
                            <a class="@(!ViewDataTyped.AssessmentInformationComplete ? "disabled" : string.Empty)" href="@(!ViewDataTyped.AssessmentInformationComplete ? "#" : observationType.AssessmentUrl(ViewDataTyped.TreatmentBMPAssessment))">                                
                                @if (ViewDataTyped.TreatmentBMPAssessment.IsObservationComplete(observationType))
                                {
                                    <span class="glyphicon glyphicon-ok field-validation-success text-left" style="margin-right: 4px"></span>
                                }
                                else
                                {
                                    <span class="glyphicon glyphicon-exclamation-sign field-validation-warning text-left" style="margin-right: 4px"></span>
                                }
                                <span>@observationType.ObservationTypeName</span>
                            </a>
                        </li>
                    }
                    <li class="@(ViewDataTyped.SectionName =="Score" ? "active" : string.Empty)">
                        <a class="@(!ViewDataTyped.AssessmentInformationComplete ? "disabled" : string.Empty)" href="@(!ViewDataTyped.AssessmentInformationComplete ? "#" : ViewDataTyped.ScoreUrl)"><span style="margin-left: 22px">Score</span></a>
                    </li>
                </ul>
            </nav>
        </div>
        
        <div id="wizardContent" class="col-xs-12 col-sm-9">
            <div class="wizardHeader">
                <h2>@ViewDataTyped.SectionName</h2>
                <hr>
            </div>
            
            <div class="validationError">
                @Html.ValidationSummary()
            </div>
            
            <div class="wizardMain">
                @RenderBody()
            </div>
        </div>
    </div>
</div>
