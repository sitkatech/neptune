@using LtInfo.Common.HtmlHelperExtensions
@using Newtonsoft.Json.Linq
@inherits Neptune.Web.Views.TreatmentBMPAssessment.StandingWater

@{
    SetLayout("SiteLayout.cshtml", ViewDataTyped);
}

<script type="text/javascript" src="@Url.Content("~/Areas/Stormwater/Views/TreatmentBMPAssessment/StandingWaterController.js")"></script>
<script type="text/javascript">
    // <![CDATA[
    angular.module("NeptuneApp")
        .factory("angularModelAndViewData",
            function()
            {
                return {
                    AngularModel: @Html.Raw(JObject.FromObject(Model)),
                    AngularViewData: @Html.Raw(JObject.FromObject(ViewDataTyped.ViewDataForAngular))
                    };
            });

    jQuery(document).ready(function () {       
        HookupCheckIfFormIsDirtyNoDisable(undefined);
    });
    // ]]>
</script>

@using (Html.BeginForm())
{
    <div class="form-horizontal">        
            <p>
                Record whether there is standing water in locations that appears to exceed what should be present following stormwater treatment. If excess standing water is observed, return to the site in 24 to 48 hours and repeat the observation. In that case, record the second observation using the form below. Use the Notes field to indicate treatment BMP conditions.
            </p>
        <div ng-app="NeptuneApp" id="ConveyanceFunctionAngularApp" ng-controller="StandingWaterController">
            <table class="table observationList">
                <thead>
                    <tr class="row">
                        <th class="col-xs-3">@Html.Label("Observation")</th>
                        <th class="col-xs-3">@Html.Label("Standing Water Present?")</th>
                        <th class="col-xs-5">@Html.Label("Notes")</th>
                    </tr>
                </thead>
                <tr class="row">
                    <td class="col-xs-3">
                        <input type="hidden" value="{{AngularModel.InitialStandingWaterObservationDetailID}}"
                               name="InitialStandingWaterObservationDetailID" />
                        @Html.LabelWithSugarFor(m => m.InitialStandingWaterObservationValue)
                    </td>
                    <td class="col-xs-3">
                        <label class="form-check-inline" style="margin-right: 10px">
                            <input name="InitialStandingWaterObservationValue" class="form-check-input" type="radio" ng-model="AngularModel.InitialStandingWaterObservationValue" ng-value="true" required /> yes
                        </label>
                        <label class="form-check-inline">
                            <input name="InitialStandingWaterObservationValue" class="form-check-input" type="radio" ng-model="AngularModel.InitialStandingWaterObservationValue"  ng-value="false" required /> no
                        </label>
                    </td>
                    <td class="col-xs-5">
                        <input name="InitialStandingWaterObservationNotes" class="form-control " type="text" ng-model="AngularModel.InitialStandingWaterObservationNotes" style="width: 100%" />
                    </td>
                </tr>
                <tr class="row" ng-show="AngularModel.InitialStandingWaterObservationValue">
                    <td class="col-xs-3">
                        <input type="hidden" value="{{AngularModel.SecondStandingWaterObservationDetailID}}"
                               name="SecondStandingWaterObservationDetailID" />
                        @Html.LabelWithSugarFor(m => m.SecondStandingWaterObservationValue)
                    </td>
                    <td class="col-xs-3">
                        <label class="form-check-inline" style="margin-right: 10px">
                            <input name="SecondStandingWaterObservationValue" class="form-check-input" type="radio" ng-model="AngularModel.SecondStandingWaterObservationValue" ng-value="true"
                                   ng-required="AngularModel.InitialStandingWaterObservationValue" /> yes
                        </label>
                        <label class="form-check-inline">
                            <input name="SecondStandingWaterObservationValue" class="form-check-input" type="radio" ng-model="AngularModel.SecondStandingWaterObservationValue" ng-value="false"
                                   ng-required="AngularModel.InitialStandingWaterObservationValue" /> no
                        </label>
                    </td>
                    <td class="col-xs-5">
                        <input name="SecondStandingWaterObservationNotes" class="form-control " type="text" ng-model="AngularModel.SecondStandingWaterObservationNotes" style="width: 100%" />
                    </td>
                </tr>
            </table>
        </div>
        
    </div>
    <div class="wizardButtonGroup">
        <hr>
        <button type="submit" class="btn btn-neptune" value="false" name="@Html.NameFor(x => x.AutoAdvance)">Save</button>
        <button type="submit" class="btn btn-neptune" value="true" name="@Html.NameFor(x => x.AutoAdvance)">Save &amp; Continue</button>
    </div>
}
