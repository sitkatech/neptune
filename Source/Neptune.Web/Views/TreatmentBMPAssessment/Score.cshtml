@using System.Web.Mvc.Html
@using LtInfo.Common.BootstrapWrappers
@using LtInfo.Common.HtmlHelperExtensions
@using Neptune.Web.Views.TreatmentBMPAssessment

@inherits Score

@{
    @SetLayout("SiteLayout.cshtml", ViewDataTyped)
}

<script type="text/javascript">
    // <![CDATA[
    jQuery(document).ready(function () {

        if (jQuery("#@Html.IdFor(x => x.UseAlternateScore)").prop("checked")) {
            jQuery("#alternativeScore").show();
        } else {
            jQuery("#alternativeScore").hide();
        }

        jQuery('#@Html.IdFor(x => x.UseAlternateScore)').on('change', function() {

            if (jQuery("#@Html.IdFor(x => x.UseAlternateScore)").prop("checked")) {
                jQuery("#alternativeScore").show();
            } else {
                jQuery("#alternativeScore").hide();
            }
        });
    });
    // ]]>
</script>

<p>
    The BMP Assessment Score is a 0-5 value that represents the treatment BMP condition at the time of observations.
    The BMP Assessment Score is a weighted integration of field observation results (observation scores) based on treatment BMP type.
</p>
<hr>
<div class="row" style="margin-bottom: 10px">
    <div class="col-sm-3 control-label">
        <label>Assessment Score</label>
    </div>
    @if (ViewDataTyped.TreatmentBMPAssessment.IsAssessmentComplete())
    {
        <div class="col-sm-9">
            @ViewDataTyped.TreatmentBMPAssessment.FormattedScore()
        </div>
    }
    else
    {
        <div class="col-sm-9">
            <p class="systemText">Assessment Not Complete</p>
        </div>
    }
</div>

<div class="panel panelNeptune" style="background-color: white">
    <div class="panel-heading panelTitle">
        Score Details
    </div>
    <div class="panel-body">
        @{
            Html.RenderRazorSitkaPartial<ScoreDetail, ScoreDetailViewData>(ViewDataTyped.ScoreDetailViewData);
        }
    </div>
</div>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-3 control-label">
                @Html.LabelWithSugarFor(m => m.UseAlternateScore)
            </div>
            <div class="col-sm-9">
                @Html.CheckBoxFor(m => m.UseAlternateScore)
                @Html.ValidationMessageFor(m => m.UseAlternateScore)
            </div>
        </div>
        <div id="alternativeScore">
            <div class="col-xs-12">
                <p>Alternate scores are discouraged, but allowed when standard methods for calculating a BMP assessment score have failed. The jurisdiction must provied a complete justification for the alternative score in writing.</p>
            </div>
            <div class="form-group">
                <div class="col-sm-3 control-label">
                    @Html.LabelWithSugarFor(m => m.AlternativeAssessmentScore)
                </div>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.AlternativeAssessmentScore, new Dictionary<string, object>() { { "style", "width: auto" }, { "class", "form-control" } })
                    @Html.ValidationMessageFor(m => m.AlternativeAssessmentScore)
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-3 control-label">
                    @Html.LabelWithSugarFor(m => m.AlternativeAssessmentScoreRationale)
                </div>
                <div class="col-sm-9">
                    @Html.TextAreaWithMaxLengthFor(m => m.AlternativeAssessmentScoreRationale, new TextAreaForExtensions.TextAreaDimensions(null, 4), null, new List<string>() { "form-control" })
                </div>
            </div>
        </div>
        <div class="row">
            <hr />
            <div class="col-xs-12 col-sm-2">
                <div><sup>@Html.Raw(BootstrapHtmlHelpers.RequiredIcon)</sup> Required Field</div>
            </div>
            <div class="col-xs-12 col-sm-10" style="text-align: right">
                <button type="submit" class="btn btn-neptune" value="false" name="@Html.NameFor(x => x.AutoAdvance)">Save</button>
                <button type="submit" class="btn btn-neptune" value="true" name="@Html.NameFor(x => x.AutoAdvance)">Save &amp; Continue <i class="glyphicon glyphicon-chevron-right"></i></button>
            </div>

            @Html.HiddenFor(m => m.TreatmentBMPAssessmentID)
            @Html.HiddenFor(m => m.TreatmentBMPID)
        </div>
    </div>
}
