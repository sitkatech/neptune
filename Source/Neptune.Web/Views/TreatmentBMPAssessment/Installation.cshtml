@using LtInfo.Common.HtmlHelperExtensions
@using Newtonsoft.Json.Linq
@inherits Neptune.Web.Views.TreatmentBMPAssessment.Installation

@{
    SetLayout("SiteLayout.cshtml", ViewDataTyped);
}

<script type="text/javascript" src="@Url.Content("~/Areas/Stormwater/Views/TreatmentBMPAssessment/InstallationController.js")"></script>
<script type="text/javascript">
    // <![CDATA[
    angular.module("NeptuneApp")
        .factory("angularModelAndViewData",
            function()
            {
                return {
                    AngularModel: @Html.Raw(JObject.FromObject(Model)),
                    AngularViewData: @Html.Raw(JObject.FromObject(ViewDataTyped.ViewDataForAngular))
                    };
            });

    jQuery(document).ready(function () {       
        HookupCheckIfFormIsDirtyNoDisable(undefined);
    });
    // ]]>
</script>

@using (Html.BeginForm())
{
    <div class="form-horizontal">        
            <p>
                Visual assessment is necessary to ensure cartridge filters are installed properly. Where observations are feasible without confined space entry, record whether the cartridge filters appear to be installed according to manufacturer specifications. Use the Notes field to indicate any issues observed. 
                If observations are infeasible without confined space entry, mark yes and make a notation in the  notes field.
            </p>
        <div ng-app="NeptuneApp" id="InstallationAngularApp" ng-controller="InstallationController">
            <table class="table observationList">
                <thead>
                    <tr class="row">
                        <th class="col-xs-3">@Html.Label("Filter Installed Properly?")</th>
                        <th class="col-xs-9">@Html.Label("Notes")</th>
                    </tr>
                </thead>
                <tr class="row">
                    <td class="col-xs-3">
                        <input type="hidden" value="{{AngularModel.InstallationObservationDetailID}}"
                                    name="InstallationObservationDetailID"/>
                        <label class="form-check-inline" style="margin-right: 10px">
                            <input name="InstallationObservationValue" class="form-check-input" type="radio" ng-model="AngularModel.InstallationObservationValue" ng-value="true" required/> yes
                        </label>
                        <label class="form-check-inline">
                            <input name="InstallationObservationValue" class="form-check-input" type="radio" ng-model="AngularModel.InstallationObservationValue" ng-value="false" required/> no
                        </label>
                    </td>
                    <td class="col-xs-9">
                        <input name="InstallationObservationNotes" class="form-control " type="text" ng-model="AngularModel.InstallationObservationNotes" style="width: 100%" />
                    </td>
                </tr>                
            </table>
        </div>
        
    </div>
    <div class="wizardButtonGroup">
        <hr>
        <button type="submit" class="btn btn-trpa" value="false" name="@Html.NameFor(x => x.AutoAdvance)">Save</button>
        <button type="submit" class="btn btn-trpa" value="true" name="@Html.NameFor(x => x.AutoAdvance)">Save &amp; Continue</button>
    </div>
}
