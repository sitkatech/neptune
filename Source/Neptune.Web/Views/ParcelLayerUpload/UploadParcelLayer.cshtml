@using Neptune.Web.Views.Shared
@using LtInfo.Common.ModalDialog
@using LtInfo.Common.Mvc
@inherits Neptune.Web.Views.ParcelLayerUpload.UploadParcelLayer
@section JavascriptAndStylesContent
{
    @{ MapJavascriptIncludes.RenderPartialView(Html); }
}
@Html.ValidationSummary()

<form id="uploadGisForm" method="post" action="@ViewDataTyped.NewGisUploadUrl" enctype="multipart/form-data">
    <div class="formPage">
        <div class="row">
            <div class="col-md-12">
                <p>
                    Use this form to bulk upload a replacement Parcel layer for the entire county. Requirements:
                </p>
                <ul>
                    <li>A single ArcGIS file geodatabase containing only Parcel features</li>
                    <li>The file geodatabase (.gdb) must be contained within a compressed zip file (.zip)</li>
                    <li>The zip file must contain only one file geodatabase and no other data</li>
                    <li>The file geodatabase must contain only one feature class</li>
                    <li>The feature class must have fields exactly matching the Parcel schema:</li>
                    <li>The following fields are required and null values will cause the upload to fail: ParcelNumber and Geometry</li>
                    <li>The following field headers are required in the schema however null values in the rows are acceptable: OwnerName, ParcelStreetNumber, ParcelAddress, ParcelZipCode, LandUse, SquareFeetHome, SquareFeetLot</li>
                    <li>
                        Geodatabases using ESRI Smart Database Compression (SDC) are not supported. Please
                        <a href="http://desktop.arcgis.com/en/arcmap/10.3/tools/data-management-toolbox/uncompress-file-geodatabase-data.htm">uncompress</a>
                        before zipping and uploading
                    </li>
                    <li>File geodatabases created in ArcMap 10.1+ or ArcGIS Pro are supported</li>
                </ul>
                <p>After you upload your file the new Parcels will be added and overwrite any existing Parcels for the entire county. The system will perform an overlay analysis to update list of parcels associated with each WQMP.</p>
                <div>
                    @Html.EditorFor(x => x.FileResourceData)
                    @Html.ValidationMessageFor(x => x.FileResourceData)
                    <span class="smallExplanationText">
                        Allowed Extensions: @Model.GetFileExtensions(x => x.FileResourceData)
                    </span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-right">
                <button type="submit" class="btn btn-neptune"><span class="glyphicon glyphicon-arrow-up"></span> Upload</button>
            </div>
        </div>
    </div>
    @Html.HiddenFor(m=>m.PersonID)
</form>
