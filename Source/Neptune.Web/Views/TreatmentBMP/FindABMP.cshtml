@using Neptune.Web.Views.Shared
@using LtInfo.Common.BootstrapWrappers
@using Neptune.Web.Views.TreatmentBMP
@using Newtonsoft.Json
@using Newtonsoft.Json.Linq
@inherits Neptune.Web.Views.TreatmentBMP.FindABMP

@section JavascriptAndStylesContent
{
    @{ DhtmlxGridIncludes.RenderPartialView(Html); }
    @{ MapJavascriptIncludes.RenderPartialView(Html); }
    <script src="@Url.Content("~/ScriptsCustom/Maps/NeptuneMaps.Stormwater.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/ScriptsCustom/Maps/NeptuneMaps.StormwaterSearch.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/leaflet/leaflet.legend/leaflet-legend.js")" type="text/javascript"></script>
    <script type="text/javascript" src="@Url.Content("~/Views/TreatmentBMP/TreatmentBMPMapController.js")"></script>
    <link href="@Url.Content("~/Content/leaflet/leaflet.legend/leaflet-legend.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript">
        // <![CDATA[
        angular.module("NeptuneApp")
            .factory("angularModelAndViewData",
                function() {
                    return {
                        AngularModel: null,
                        AngularViewData:
                            @Html.Raw(JObject.FromObject(ViewDataTyped.ViewDataForAngular).ToString(Formatting.None))
                    };
                });
        // ]]>
    </script>

    <style>
        .selected-bmp {
            background-color: #FFFF85;
        }.selected-bmp:hover {
            background-color: #FFFF85 !important;
        } 
        .list-group-item .help-block {
            margin-bottom: 0;
            font-size: 12px;
        }
        ul.list-group {
            max-height: 350px;
            overflow-y: auto;
            border: 1px solid #eee;
            border-top: none;
            border-bottom: none;
        }

        li.list-group-item {
            color: #737373;
            cursor: pointer;
        }

        li.list-group-item:hover {
            background-color: #eee;
            cursor: pointer;
        }

        .panel.panelNeptune {
            border: none;
        }
    </style>

}

@section RightOfPageTitle
{

}

@{ ViewPageContent.RenderPartialView(Html, ViewDataTyped.ViewPageContentViewData); }
<div ng-app="NeptuneApp" ng-controller="TreatmentBMPMapController">
    <div class="row">
        <div class="col-sm-4 col-md-3">
            <div class="input-group">
                <input type="text" id="treatmentBMPFinder" class="typeahead form-control" placeholder="Search by BMP name" autocomplete="off"/>
                <span class="input-group-btn">
                    <a id="treatmentBMPFinderButton" class="btn btn-default">
                        <i class="glyphicon glyphicon-search"></i>
                    </a>
                </span>
            </div>

        </div>
        <div class="col-sm-4 col-md-3">
            <a style="width: 100%" class="btn btn-neptune" ng-click="zoomMapToCurrentLocation()"><i class="glyphicon glyphicon-phone" style="margin-right: 4px;"></i>Find nearby BMPs</a>
        </div>
        <div class="col-sm-4 col-md-6">
            <span style="font-weight: bold">Filter Projects by:</span>
            <select id="filterPropertyNameSelected" name="filterPropertyNameSelected" class="btn btn-sm selectpicker" data-width="auto" multiple="multiple" ng-change="filterMapByBmpType()" ng-Model="selectedTreatmentBMPTypeIDs"
                    data-selected-text-format = "count>1" data-count-selected-text="{0} of {1} selected" data-actions-box="true">
                @foreach (var keyValuePair in ViewDataTyped.TreatmentBMPTypeFilterTypesAndValues)
                {
                    <option value="@keyValuePair.Value" data-filter="@keyValuePair.Value">
                        @keyValuePair.Text
                    </option>
                }
            </select>
        </div>
    </div>

    <div class="row" style="margin-top: 10px;">
        <div class="col-sm-8 col-md-9 col-sm-push-4 col-md-push-3">
            <div id="mapContainer">
                <div id="@ViewDataTyped.MapInitJson.MapDivID" style="height: 350px; margin: 0">
                </div>
            </div>
        </div>
        <div class="col-sm-4 col-md-3 col-sm-pull-8 col-md-pull-9">
            <div class="panel panelNeptune">
                <div class="panel-heading panelTitle">
                    <h3>
                        BMPs in Map View
                    </h3>
                </div>
                <ul class="list-group" ng-if="visibleBMPCount() <= @FindABMPViewData.MaxNumberOfBmpsInList">
                    <li class="list-group-item" ng-repeat="treatmentBMP in visibleBMPs()" ng-click="setActive(treatmentBMP)" ng-class="{'selected-bmp' : isActive(treatmentBMP)}">
                        <strong>{{treatmentBMP.DisplayName}}</strong>
                        <div class="help-block">
                            {{treatmentBMP.TreatmentBMPTypeName}}
                        </div>
                    </li>
                </ul>
                <div class="panel-body" ng-if="visibleBMPCount() >  @FindABMPViewData.MaxNumberOfBmpsInList">
                    <p class="systemText">{{visibleBMPCount()}} BMPs shown on map - Zoom closer see a list</p>
                </div>

            </div>
        </div>

    </div>
    <div class="row" style="margin-top: 10px;">
        <div class="col-sm-4 col-md-3">
        </div>

        <div class="col-sm-8 col-md-12" id="mapSummaryResults"></div>
    </div>
    <hr/>
    <div class="row">
        <div class="col-sm-12">
            <h4 style="margin-top: 0;">Didn't find the BMP you are looking for?</h4>
            <a href="@ViewDataTyped.AllBMPsUrl" class="btn btn-neptune btn">View list of All BMPs</a>
            @if (ViewDataTyped.HasManagePermissions)
            {
                <a class="btn btn-neptune headerButtonText treatmentBMPButton" href="@ViewDataTyped.NewUrl">@BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-plus") Add Treatment BMP</a>
            }
        </div>
    </div>
</div>