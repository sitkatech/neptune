@using LtInfo.Common.BootstrapWrappers
@using LtInfo.Common.HtmlHelperExtensions
@inherits Neptune.Web.Views.TreatmentBMP.EditModelingAttributes

<div class="row">
    <div class="col-xs-12">
        <div class="validationError">
            @Html.ValidationSummary()
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    <div class="formPage">
        <div class="row">
            <div class="col-xs-12">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="form-horizontal">
                            <div class="form-group row">
                                <label class="col-sm-4 control-label">
                                    @Html.LabelWithSugarFor(x => x.TotalEffectiveBMPVolume)
                                </label>
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <input class="form-control" name="@Html.NameFor(m => m.TotalEffectiveBMPVolume)" aria-describedby="attributeUnit" type="number"
                                               value="@Model.TotalEffectiveBMPVolume"
                                               />
                                        <span class="input-group-addon" id="attributeUnit">cubic feet</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <hr />
                        <div class="col-xs-12 col-sm-2">
                            <div><sup>@Html.Raw(BootstrapHtmlHelpers.RequiredIcon)</sup> Required Field</div>
                        </div>
                        <div class="col-xs-12 col-sm-10" style="text-align: right">
                            <button action="p" type="submit" class="btn btn-neptune">Save</button>
                            <a href="@ViewDataTyped.SubEntityUrl" class="btn btn-neptune">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}