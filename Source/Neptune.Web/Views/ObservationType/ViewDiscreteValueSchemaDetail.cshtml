
@using LtInfo.Common.HtmlHelperExtensions
@using Neptune.Web.Models
@inherits Neptune.Web.Views.ObservationType.ViewDiscreteValueSchemaDetail

<div class="col-xs-12 col-sm-12">
    <div class="panel panelNeptune">
        <div class="panel-heading panelTitle">
            Instructions
        </div>
        <div class="panel-body">
            <div class="row">
                <label class="col-sm-3 control-label text-right">Assessment Instructions</label>
                <div class="col-sm-9">@ViewDataTyped.DiscreteObservationTypeSchema.AssessmentDescription</div>
            </div>
            <br/>
            <div class="row">
                <label class="col-sm-3 control-label text-right">Benchmark Instructions</label>
                <div class="col-sm-9">@ViewDataTyped.DiscreteObservationTypeSchema.BenchmarkDescription</div>
            </div>
            <br/>
                <div class="row">
                    <label class="col-sm-3 control-label text-right">Threshold Instructions</label>
                    <div class="col-sm-9">@ViewDataTyped.DiscreteObservationTypeSchema.ThresholdDescription</div>
                </div>
        </div>
    </div>
</div>
<div class="col-xs-12 col-sm-12">
    <div class="panel panelNeptune">
        <div class="panel-heading panelTitle">
            Labels and Units
        </div>
        <div class="panel-body">
            <div class="row">
                    <label class="col-sm-3 control-label text-right">@Html.LabelWithSugarFor(FieldDefinition.PropertiesToObserve)</label>
                    <div class="col-sm-9">@ViewDataTyped.PropertiesToObserveFormatted</div>
                </div>
                <div class="row">
                    <label class="col-xs-3 col-sm-3 control-label text-right">@Html.LabelWithSugarFor(FieldDefinition.MeasurementUnitLabel)</label>
                    <div class="col-xs-9 col-sm-3">@ViewDataTyped.DiscreteObservationTypeSchema.MeasurementUnitLabel</div>
                    <label class="col-xs-3 col-sm-3 control-label text-right">@Html.LabelWithSugarFor(FieldDefinition.MeasurementUnit)</label>
                    <div class="col-xs-9 col-sm-3">@ViewDataTyped.MeasurementUnitType.MeasurementUnitTypeDisplayName</div>
                </div>
                <div class="row">
                    <label class="col-xs-3 col-sm-3 control-label text-right">@Html.LabelWithSugarFor(FieldDefinition.MinimumNumberOfObservations)</label>
                    <div class="col-xs-9 col-sm-3">@ViewDataTyped.DiscreteObservationTypeSchema.MinimumNumberOfObservations</div>
                    <label class="col-xs-3 col-sm-3 control-label text-right">@Html.LabelWithSugarFor(FieldDefinition.MaximumNumberOfObservations)</label>
                    <div class="col-xs-9 col-sm-3">@ViewDataTyped.DiscreteObservationTypeSchema.MaximumNumberOfObservations</div>
                </div>
                <div class="row">
                    <label class="col-xs-3 col-sm-3 control-label text-right">@Html.LabelWithSugarFor(FieldDefinition.MaximumValueOfEachObservation)</label>
                    <div class="col-xs-9 col-sm-3">@ViewDataTyped.DiscreteObservationTypeSchema.MinimumValueOfObservations</div>
                    <label class="col-xs-3 col-sm-3 control-label text-right">@Html.LabelWithSugarFor(FieldDefinition.MaximumNumberOfObservations)</label>
                    <div class="col-xs-9 col-sm-3">@ViewDataTyped.DiscreteObservationTypeSchema.MaximumValueOfObservations</div>
                </div>           
        </div>
    </div>
</div>
