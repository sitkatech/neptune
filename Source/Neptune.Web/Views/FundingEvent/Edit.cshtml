@using Neptune.Web.Models
@using LtInfo.Common.HtmlHelperExtensions
@using LtInfo.Common.ModalDialog
@using Newtonsoft.Json.Linq
@inherits Neptune.Web.Views.FundingEvent.Edit
<script type="text/javascript">
    // <![CDATA[
    jQuery(document).ready(function() {
        angular.module("NeptuneApp").factory("angularModelAndViewData",
            function() {
                return {
                    AngularModel: @Html.Raw(JObject.FromObject(Model)),
                    AngularViewData: @Html.Raw(JObject.FromObject(ViewDataTyped))
                };
            });
        angular.bootstrap(jQuery("#EditFundingEventApp"), ["NeptuneApp"]);

        jQuery(".selectpicker").selectpicker("refresh");
        jQuery(".modal").on("hidden.bs.modal",
            function() {
                jQuery(".bootstrap-select.open").removeClass("open");
            });
    })
    // ]]>
</script>

<div class="row">
    <div class="col-xs-12">
        <div class="validationError">
            @Html.ValidationSummary()
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div ng-app="EditFundingEventApp" id="EditFundingEventApp" ng-controller="EditFundingEventController" style="max-height: 600px;">
            @if (ViewDataTyped.FromFundingSource)
            {
                <div class="form-group">
                    <label class="control-label">TreatmentBMP to Add</label>
                    <div class="input-group">
                        <select ng-model="TreatmentBMPIDToAdd"
                                class="selectpicker"
                                data-live-search="true"
                                data-container="body"
                                title="Select a TreatmentBMP to Add"
                                data-width="100%">
                            <option value="null" disabled selected></option>
                            <option ng-repeat="treatmentBMP in filteredTreatmentBMPs()"
                                    value="{{treatmentBMP.TreatmentBMPID}}"
                                    ng-selected="TreatmentBMPIDToAdd == treatmentBMP.TreatmentBMPID"
                                    ng-bind="treatmentBMP.DisplayName"
                                    data-tokens="{{treatmentBMP.DisplayName}}"></option>
                        </select>
                        <span class="input-group-btn">
                            <button class="btn btn-neptune" type="button" ng-click="addRow()">
                                <span class="glyphicon glyphicon-plus"></span> Add
                            </button>
                        </span>
                    </div>
                </div>
            }
            else
            {
                <div class="form-group">
                    <label class="control-label">Funding Source to Add</label>
                    <div class="input-group">
                        <select ng-model="FundingSourceIDToAdd"
                                class="selectpicker"
                                data-live-search="true"
                                data-container="body"
                                title="Select a Funding Source to Add"
                                data-width="100%">
                            <option value="null" disabled selected></option>
                            <option ng-repeat="fundingSource in filteredFundingSources()"
                                    value="{{fundingSource.FundingSourceID}}"
                                    ng-selected="FundingSourceIDToAdd == fundingSource.FundingSourceID"
                                    ng-bind="fundingSource.DisplayName"
                                    data-tokens="{{fundingSource.DisplayName}}"></option>
                        </select>
                        <span class="input-group-btn">
                            <button class="btn btn-neptune" type="button" ng-click="addRow()">
                                <span class="glyphicon glyphicon-plus"></span> Add
                            </button>
                        </span>
                    </div>
                    <br />
                </div>
            }
            <table class="dialogFormLayout" style="margin-top: 20px; table-layout: fixed" ng-show="AngularModel.FundingEvents.length > 0">               
                <tbody>
                <tr>
                    <th style="width: 30px;"></th>
                    <th style="white-space: nowrap">@Html.Raw(ViewDataTyped.FromFundingSource ? Html.LabelWithSugarFor(FieldDefinition.TreatmentBMP) : Html.LabelWithSugarFor(FieldDefinition.FundingSource))</th>
                    <th style="text-align: right; padding-right: 17px;">Amount</th>
                </tr>
                <tr ng-repeat="fundingEvent in AngularModel.FundingEvents | orderBy:[getFundingSourceName, getTreatmentBMPName]">
                    <td><span class="glyphicon glyphicon-trash blue" title="Remove row" alt="Remove row" ng-click="deleteRow(fundingEvent)" style="cursor: pointer"></span></td>
                    <td ng-bind="@(ViewDataTyped.FromFundingSource ? "getTreatmentBMPName(fundingEvent)" : "getFundingSourceName(fundingEvent)")">
                    <td style="text-align: right; padding-right: 17px;">
                        <input style="float: right; text-align: right; padding: 2px 0; width: 150px;" type="text" ng-model="fundingEvent.Amount" class="sitkaCurrency form-control" ng-currency/>
                    </td>                                       
                </tr>
                <tr style="border-top: 1px solid #eeeeee;">
                    <th colspan="2">Total</th>
                    <th style="text-align: right; padding-right: 17px;" ng-bind="getTotal() | nfcurrency"></th>                    
                </tr>
                </tbody>
            </table>

            @using (Html.BeginForm())
            {
                <div ng-repeat="fundingEvent in AngularModel.FundingEvents | orderBy:[getFundingSourceName, getTreatmentBMPName]">
                    <input type="hidden" name="@Html.NameFor(x => x.FundingEvents[0].TreatmentBMPID).ToString().Replace("0", "{{$index}}")" value="{{fundingEvent.TreatmentBMPID}}"/>
                    <input type="hidden" name="@Html.NameFor(x => x.FundingEvents[0].FundingSourceID).ToString().Replace("0", "{{$index}}")" value="{{fundingEvent.FundingSourceID}}"/>
                    <input type="hidden" name="@Html.NameFor(x => x.FundingEvents[0].Amount).ToString().Replace("0", "{{$index}}")" value="{{fundingEvent.Amount}}"/>                    
                </div>
            }
        </div>
    </div>
</div>
