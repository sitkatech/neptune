@using Neptune.Web.Models
@using Neptune.Web.Views.Home
@using Neptune.Web.Views.Shared

@inherits LaunchPad

<style>
    .launchPadHeader, .launchPadAction { margin-bottom: 10px; }

    .launchPadJurisdictionList {
        max-height: 200px;
        overflow-y: auto;
    }

    .launchPadActionButton { width: 100%; }
</style>

@if (ViewDataTyped.IsLoggedIn)
{
    <div class="row">
        <div class="col-xs-12 launchPadHeader">
            <h2>Launch Pad</h2>
            <h4>Welcome @ViewDataTyped.CurrentPerson.FirstName,</h4>
            @if (ViewDataTyped.CurrentPerson.Role == Role.Unassigned)
            {
                <p>You do not have a role assigned. <a href="#">Request Support</a> or contact your jurisdiction manager to request a role.</p>
            }
            else if (ViewDataTyped.IsAdmin)
            {
                <p>
                    Your assigned Jurisdictions: You are an Administrator and therefore manage <a href="@ViewDataTyped.JurisdictionIndexUrl">all Jurisdictions</a>.
                </p>
            }
            else if (ViewDataTyped.Jurisdictions.Count() == 1)
            {
                var jurisdiction = ViewDataTyped.Jurisdictions.Single();
                <p>
                    Your assigned Jurisdiction:
                    <a href="@jurisdiction.GetDetailUrl()">@jurisdiction.OrganizationDisplayName</a>
                </p>
            }
            else if (ViewDataTyped.Jurisdictions.Any())
            {
                <p>
                    Your assigned Jurisdictions:
                </p>
                <ul class="launchPadJurisdictionList">
                    @foreach (var jurisdiction in ViewDataTyped.Jurisdictions)
                    {
                        <li>
                            <a href="@jurisdiction.GetDetailUrl()">@jurisdiction.OrganizationDisplayName</a>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p>You are not assigned to a Jurisdiction</p>
            }
        </div>
        <div class="col-xs-12">
            <h4>Common Tasks</h4>
        </div>
        <div class="col-xs-12 col-sm-6 launchPadAction">
            <div class="row">
                <div class="col-xs-6 col-md-5 col-lg-4">
                    <a href="@ViewDataTyped.FindABmpUrl" class="btn btn-neptune launchPadActionButton">Find a BMP</a>
                </div>
                <div class="col-xs-6 col-md-7 col-lg-8">
                    Start here to view, edit, assess, or maintain a BMP
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-6 launchPadAction">
            <div class="row">
                <div class="col-xs-6 col-md-5 col-lg-4">
                    <a href="@ViewDataTyped.ExploreBmpTypesUrl" class="btn btn-neptune launchPadActionButton">Explore BMP Types</a>
                </div>
                <div class="col-xs-6 col-md-7 col-lg-8">
                    See details of the @ViewDataTyped.NumberOfBmpTypes different types of BMPs
                </div>
            </div>
        </div>
        @if (ViewDataTyped.IsJurisdictionManager)
        {
            <div class="col-xs-12 col-sm-6 launchPadAction">
                <div class="row">
                    <div class="col-xs-6 col-md-5 col-lg-4">
                        <a href="@ViewDataTyped.AddABmpUrl" class="btn btn-neptune launchPadActionButton">Add a BMP</a>
                    </div>
                    <div class="col-xs-6 col-md-7 col-lg-8">
                        Start here to add a new BMP
                    </div>
                </div>
            </div>
        }
        <div class="col-xs-12 col-sm-6 launchPadAction">
            <div class="row">
                <div class="col-xs-6 col-md-5 col-lg-4">
                    <a href="@ViewDataTyped.ViewAssessmentAndMaintenanceRecordsUrl" class="btn btn-neptune launchPadActionButton">View Assessment and<br/>Maintenance Records</a>
                </div>
                <div class="col-xs-6 col-md-7 col-lg-8">
                    View records of completed assessment and maintenance events
                </div>
            </div>
        </div>
        @if (ViewDataTyped.IsJurisdictionManager)
        {
            <div class="col-xs-12 col-sm-6 launchPadAction">
                <div class="row">
                    <div class="col-xs-6 col-md-5 col-lg-4">
                        <a href="@ViewDataTyped.InviteANewUserUrl" class="btn btn-neptune launchPadActionButton" disabled>Invite a New User</a>
                    </div>
                    <div class="col-xs-6 col-md-7 col-lg-8">
                        Invite a new user and assign them roles
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 launchPadAction">
                <div class="row">
                    <div class="col-xs-6 col-md-5 col-lg-4">
                        <a href="@ViewDataTyped.EditUserRolesUrl" class="btn btn-neptune launchPadActionButton">Edit User Roles</a>
                    </div>
                    <div class="col-xs-6 col-md-7 col-lg-8">
                        Edit roles of an existing user in your jurisdiction
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 launchPadAction">
                <div class="row">
                    <div class="col-xs-6 col-md-5 col-lg-4">
                        <a href="@ViewDataTyped.AddAFundingSourceUrl" class="btn btn-neptune launchPadActionButton">Add a Funding Source</a>
                    </div>
                    <div class="col-xs-6 col-md-7 col-lg-8">
                        Set up sources of projects and O&amp;M funding
                    </div>
                </div>
            </div>
        }
    </div>
    { ViewPageContent.RenderPartialView(Html, ViewDataTyped.LaunchPadViewPageContentViewData); }
    <hr />
}
