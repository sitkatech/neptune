@using LtInfo.Common.BootstrapWrappers
@using Neptune.Web.Models
@using Neptune.Web.Views.Shared.ManagePhotosWithPreview
@using Neptune.Web.Views.TreatmentBMPImage
@inherits ManageTreatmentBMPImages

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-xs-12">
            @Html.ValidationSummary()
        </div>
    </div>
    @{ ManagePhotosWithPreview.RenderPartialView(Html, ViewDataTyped.ManagePhotosWithPreviewViewData, Model); }
    <div class="row">
        <hr/>
        <div class="col-xs-12 col-sm-2">
            <div><sup>@Html.Raw(BootstrapHtmlHelpers.RequiredIcon)</sup> Required Field</div>
        </div>
        <div class="col-xs-12 col-sm-10" style="text-align: right">
            <a href="@ViewDataTyped.TreatmentBMP.GetDetailUrl()" class="btn btn-neptune">
                @BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-chevron-left")
                Return to Detail
            </a>
            <button type="submit" class="btn btn-neptune" value="false" name="@Html.NameFor(x => x.AutoAdvance)">Save</button>
        </div>
    </div>
</form>

