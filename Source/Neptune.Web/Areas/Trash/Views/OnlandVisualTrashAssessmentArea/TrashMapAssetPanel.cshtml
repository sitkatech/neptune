@using Neptune.Web.Areas.Trash.Views.OnlandVisualTrashAssessment
@inherits Neptune.Web.Areas.Trash.Views.OnlandVisualTrashAssessmentArea.TrashMapAssetPanel

<div class="row">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-12">
                <h4>@ViewDataTyped.OnlandVisualTrashAssessmentArea.OnlandVisualTrashAssessmentAreaName</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <dl>
                    <dt>Assessment Date</dt>
                    <dd>@ViewDataTyped.OnlandVisualTrashAssessmentArea.GetMostRecentAssessmentDateAsHtmlString()</dd>
                    <dt>Score</dt>
                    <dd>@ViewDataTyped.OnlandVisualTrashAssessmentArea.CalculateScoreFromBackingData().OnlandVisualTrashAssessmentScoreDisplayName</dd>
                    <dt>Details</dt>
                    <dd><p class="systemText">Content under development</p></dd>
                </dl>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <a href="@ViewDataTyped.OnlandVisualTrashAssessmentArea.GetDetailUrl()" class="btn btn-neptune">View Details</a>
            </div>
        </div>
    </div>
</div>
