@using DocumentFormat.OpenXml.Drawing.Diagrams
@using Neptune.Web.Models
@using Neptune.Web.Views.Shared
@using Newtonsoft.Json
@using Newtonsoft.Json.Linq
@inherits Neptune.Web.Areas.Trash.Views.Home.Index

@section JavascriptAndStylesContent
{
    <meta name="Description" content="Neptune provides public access to program information and details on watershed, habitat, stormwater, forestry, air quality, and projects implemented by Neptune partners." />

    @{ MapJavascriptIncludes.RenderPartialView(Html); }
    <script src="@Url.Content("~/ScriptsCustom/Maps/NeptuneMaps.GeoServerMap.min.js")" type="text/javascript"></script>
    <script type="text/javascript" src="@Url.Content("~/Areas/Trash/Views/Home/TrashModuleMapController.js")"></script>
    <script type="text/javascript">
        // <![CDATA[
        angular.module("NeptuneApp")
            .factory("angularModelAndViewData",
                function() {
                    return {
                        AngularModel: null,
                        AngularViewData:
                            @Html.Raw(JObject.FromObject(ViewDataTyped.ViewDataForAngular).ToString(Formatting.None))
                    };
                });

        jQuery(document).ready(function() {
            jQuery('.selectpicker').selectpicker("val", [1, 2]);
            jQuery('#trashCaptureStatusTypeDropdown').change();
        });
        // ]]>
    </script>

    <style>
        #legend {
            padding-left: 0;
            list-style-type: none;
        }

            #legend img {
                max-height: 50px;
            }
    </style>
}


@{ ViewPageContent.RenderPartialView(Html, ViewDataTyped.ViewPageContentViewData); }

<div ng-app="NeptuneApp" ng-controller="TreatmentBMPMapController">
    <div class="row">
        <div class="col-sm-12 text-right" style="padding-right:0;">
            <span style="font-weight: bold">Filter by Trash Capture Status</span>
            <select id="trashCaptureStatusTypeDropdown" class="btn btn-sm selectpicker" data-width="auto" multiple="multiple" ng-change="filterMapByTrashCaptureStatus()" ng-model="selectedTrashCaptureStatusIDs"
                    data-selected-text-format="count>1" data-count-selected-text="{0} of {1} selected" data-actions-box="true">
                <option ng-repeat="trashCaptureStatusType in AngularViewData.TrashCaptureStatusTypes | orderBy:'TrashCaptureStatusTypeSortOrder'" value="{{trashCaptureStatusType.TrashCaptureStatusTypeID}}">
                    {{trashCaptureStatusType.TrashCaptureStatusTypeDisplayName}}
                </option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-2">
            <h3>Selected asset</h3>
            <div id="mapSummaryResults">
                <p class="systemText">No asset selected</p>
            </div>
        </div>
        <div class="col-sm-12 col-md-7" style="margin-top: 20px;">
            <div id="mapContainer">
                <div id="@ViewDataTyped.MapInitJson.MapDivID" style="height: 350px; margin: 0">
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-3">
            <h3>Legend</h3>
            <ul id="legend">
                <li>
                    <img src="@TrashCaptureStatusType.Full.MapboxMarkerUrlForLegend()" /> Full Trash Capture
                </li>

                <li>
                    <img src="@TrashCaptureStatusType.Partial.MapboxMarkerUrlForLegend()" /> Partial Trash Capture
                </li>

                <li>
                    <img src="@TrashCaptureStatusType.None.MapboxMarkerUrlForLegend()" /> No Trash Capture
                </li>

                <li>
                    <img src="@TrashCaptureStatusType.NotProvided.MapboxMarkerUrlForLegend()" /> Trash Capture Status Not Provided
                </li>

            </ul>
        </div>
    </div>
</div>