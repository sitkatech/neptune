@using LtInfo.Common.BootstrapWrappers
@using LtInfo.Common.HtmlHelperExtensions
@inherits Neptune.Web.Areas.Trash.Views.OnlandVisualTrashAssessment.InitiateOVTA

@{ @SetLayout("SiteLayout.cshtml", ViewDataTyped) }





@using (Html.BeginForm("Location", "FieldVisit", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "field-visit-form" }))
{
    <div class="formPage">
            <div class="form-horizontal">
                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        @Html.LabelWithSugarFor(m => m.StormwaterJurisdictionID)
                    </div>
                    <div class="col-sm-10">
                        @Html.DropDownListFor(m => m.StormwaterJurisdictionID, ViewDataTyped.Jurisdictions, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.StormwaterJurisdictionID)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        @Html.LabelWithSugarFor(m => m.Notes)
                    </div>
                    <div class="col-sm-10">
                        @Html.TextAreaWithMaxLengthFor(m => m.Notes, new TextAreaForExtensions.TextAreaDimensions(null, 8), null, new List<string> { "form-control" })
                        @Html.ValidationMessageFor(m => m.Notes)
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-sm-2 text-center">
                        <div class="row"><button class="btn btn-sm btn-neptune">Zoom to my location</button></div>
                        <div class="row"><button class="btn btn-sm btn-neptune">Search</button></div>
                    </div>
                    <div class="col-sm-10" id="@ViewDataTyped.MapInitJson.MapDivID">
                        
                    </div>
                    @* TODO: Mappo *@
                </div>

                <hr />
                <p class="systemText">If you are sure you are performing an area's first assessment, check this box to continue.</p>

                <div class="form-group">
                    <div class="col-sm-2 control-label">
                        @Html.LabelWithSugarFor(m => m.AssessingNewArea)
                    </div>
                    <div class="col-sm-10">
                        <label>
                            @Html.EditorFor(m => m.AssessingNewArea) Yes, I want to assess a new area.
                        </label>
                        @Html.ValidationMessageFor(m => m.AssessingNewArea)
                    </div>
                </div>
            </div>
        </div>



    <hr />
    <div class="row">
        <div class="col-xs-12 col-sm-2">
            <div><sup>@Html.Raw(BootstrapHtmlHelpers.RequiredIcon)</sup> Required Field</div>
        </div>

        <div class="col-xs-12 col-sm-10" style="text-align: right">
            <button type="submit" class="btn btn-neptune" value="false" name="@Html.NameFor(x => x.AutoAdvance)">Save</button>
            <button type="submit" class="btn btn-neptune" value="true" name="@Html.NameFor(x => x.AutoAdvance)">Save &amp; Continue <i class="glyphicon glyphicon-chevron-right"></i></button>
        </div>
    </div>
}