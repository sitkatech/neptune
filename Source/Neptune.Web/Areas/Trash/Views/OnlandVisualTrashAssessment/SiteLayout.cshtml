@using LtInfo.Common.ModalDialog
@using Neptune.Web.Models
@inherits Neptune.Web.Areas.Trash.Views.OnlandVisualTrashAssessment.OVTASection
@{
    @SetLayout("~/Views/Shared/SiteLayout.cshtml", ViewDataTyped)
}

@section JavascriptAndStylesContent
{
    @RenderSection("JavascriptAndStylesContent", false)

    <style>
        nav#wizardNav ul li a.disabledItem {
            cursor: not-allowed;
            font-style: italic;
            color: #999;
            background-color: transparent;
        }

        nav#wizardNav ul li.activeGroup a,
        nav#wizardNav ul li.activeGroup span {
            color: #fff;
            background: #0099ab;
            cursor: pointer;
        }

        ul.ovtaTierTwoMenu {
            border-left: 4px solid;
            border-bottom: 4px solid;
            border-color: #0099ab;
        }

        @@media (max-width: 768px) {
            ul.ovtaTierTwoMenu {
                border-right: 3px solid;
                border-color: #0099ab;
            }
        }

        nav#wizardNav ul.ovtaTierTwoMenu li a {
            background-color: #fff;
            color: #333;
        }

        nav#wizardNav ul.ovtaTierTwoMenu li a span {
            color: #f0ad4e;
            background-color: inherit;
        }


        @@media (min-width: 769px) {
            nav#wizardNav ul li.activeGroup a.activeItem:after {
                content: '';
                display: block;
                position: absolute;
                left: 100%;
                top: 50%;
                margin-top: -10px;
                width: 0;
                height: 0;
                border-top: 10px solid transparent;
                border-right: 10px solid transparent;
                border-bottom: 10px solid transparent;
                border-left: 8px solid #0099ab;
                z-index: 900;
            }

            nav#wizardNav ul.ovtaTierTwoMenu a.activeItem:after {
                border-left: 8px solid #e49937 !important;
            }
        }

        nav#wizardNav ul.ovtaTierTwoMenu a:hover {
            background-color: #e9ad5d;
            color: #fff;
        }

        nav#wizardNav ul.ovtaTierTwoMenu a.activeItem,
        nav#wizardNav ul.ovtaTierTwoMenu a.activeItem span,
        nav#wizardNav ul.ovtaTierTwoMenu a.activeItem:hover {
            background-color: #e49937;
            color: #fff;
        }

        nav#wizardNav ul.ovtaTierTwoMenu a:hover .glyphicon-exclamation-sign {
            color: #fff;
        }

        hr {
            border-top: 1px solid #ddd;
        }

        .moreActionsToggle .open > .moreActionsToggle .dropdown-toggle {
            color: #3e72b0 !important;
        }


        .moreActionsToggle ul.dropdown-menu.moreActionsToggle li a,
        .moreActionsToggle ul.dropdown-menu.moreActionsToggle li a:hover {
            color: #3e72b0;
        }

        .moreActionsToggle .btn.dropdown-toggle {
            border: none;
            color: #3e72b0;
        }

        .glyphicon-chevron-down {
            margin-left: 7px;
            margin-top: 7px;
        }
    </style>
}
    
@Html.ValidationSummary()
<div>
    <div class="row wizard">
        <div class="col-xs-12 col-sm-3">
            <nav id="wizardNav">
                <ul class="nav nav-stacked">
                    @foreach (var ovtaSection in OVTASection.All)
                    {
                        var sectionIsActive = ViewDataTyped.SectionName == ovtaSection.OVTASectionName;
                        var topLevelIsActive = ViewDataTyped.SubsectionName == null;
                        <li class="@(sectionIsActive ? "activeGroup" : string.Empty)">
                            <a class="@(topLevelIsActive ? "activeItem" : string.Empty) @(ViewDataTyped.OVTA == null ? "disabledItem" : string.Empty)" href="@ovtaSection.GetSectionUrl(ViewDataTyped.OVTA)">
                                <span>@ovtaSection.OVTASectionDisplayName</span>
                            </a>
                            @if (sectionIsActive && (!topLevelIsActive || ovtaSection.ExpandMenu(ViewDataTyped.OVTA)))
                            {
                                <ul class="nav nav-stacked ovtaTierTwoMenu">
                                    @foreach (var ovtaSubsection in ovtaSection.GetSubsections(ViewDataTyped.OVTA))
                                    {
                                        var subsectionIsActive = ViewDataTyped.SubsectionName == ovtaSubsection.SubsectionName;
                                        <li>
                                            <a class="@(subsectionIsActive ? "activeItem" : string.Empty)" href="@ovtaSubsection.SubsectionUrl">
                                                @if (ovtaSubsection.SectionCompletionStatusIndicator != null)
                                                {
                                                    @ovtaSubsection.SectionCompletionStatusIndicator
                                                }
                                                @ovtaSubsection.SubsectionName
                                            </a>
                                        </li>
                                    }
                                </ul>
                            }
                        </li>
                    }
                </ul>
            </nav>
        </div>
        <div id="wizardContent" class="col-xs-12 col-sm-9">
            <div class="wizardHeader">
                <h2>@ViewDataTyped.SectionHeader</h2>
            </div>

            <div class="wizardMain">
                @RenderBody()
            </div>
        </div>
    </div>
</div>
