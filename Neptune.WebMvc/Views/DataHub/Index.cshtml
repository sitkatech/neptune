@using Neptune.WebMvc.Views.Shared
@using Neptune.WebMvc.Common.DhtmlWrappers
@using Neptune.WebMvc.Common.BootstrapWrappers
@inherits Neptune.WebMvc.Views.DataHub.Index
@section JavascriptAndStylesContent
{
    @{ DhtmlxGridIncludes.RenderPartialView(Html); }
    <style>
        #tcLegend, #ovtaAreaLegend {
            padding-left: 0;
            list-style-type: none;
        }
        .sidebar {
            background-color: #EEEEEE;
            padding: 1rem 2rem 2rem 2rem;
            h4 {
                color: #000;
            }
        }
        .tab-pane {
            h3 {
                padding: 0 1rem 0 0;
            }
            a {
                margin: 0 0.5rem 0 0;
            }
        }
    </style>
}

@{ ViewPageContent.RenderPartialView(Html, ViewDataTyped.ViewPageContentViewData); }

@section RightOfPageTitle{
    
}

<div class="container-fluid">
    <div class="row">
        <ul class="nav nav-tabs" id="organizationDetailsTabs" style="border-bottom: none;">
            <li class="active">
                <a href="#bmpsAndDelineations" aria-controls="areaResultsOverview" role="tab" data-toggle="tab" id="areaResultsTab">BMPs and Delineations</a>
            </li>
            <li>
                <a href="#wqmps" aria-controls="loadResultsOverview" role="tab" data-toggle="tab" id="loadResultsTab">WQMPs</a>
            </li>
            <li>
                <a href="#trashModule" aria-controls="ovtaResultsOverview" role="tab" data-toggle="tab" id="ovtaResultsTab">Trash Module</a>
            </li>
            <li>
                <a href="#parcels" aria-controls="ovtaResultsOverview" role="tab" data-toggle="tab" id="ovtaResultsTab">Parcels</a>
            </li>
            <li>
                <a href="#countyIntegration" aria-controls="ovtaResultsOverview" role="tab" data-toggle="tab" id="ovtaResultsTab">County GIS Integration</a>
            </li>
            <li>
                <a href="#webServices" aria-controls="ovtaResultsOverview" role="tab" data-toggle="tab" id="ovtaResultsTab">Web Services</a>
            </li>
        </ul>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-body">
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active " id="bmpsAndDelineations" ng-controller="AreaBasedMapController">
                <div class="col-md-9">
                    <h3>Treatment BMPs</h3>
                    @{
                        ViewPageContent.RenderPartialView(Html, ViewDataTyped.TreatmentBMPPage);
                    }
                    <a href="@ViewDataTyped.UploadTreatmentBMPUrl" class="btn btn-neptune">@BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-upload") Upload</a>
                    <a href="@ViewDataTyped.DownloadTreatmentBMPUrl" class="btn btn-neptune" disabled>@BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-download") Download</a>
                
                    <h3>Delineations</h3>
                    @{
                        ViewPageContent.RenderPartialView(Html, ViewDataTyped.DelineationPage);
                    }
                    <a href="@ViewDataTyped.UploadDelineationUrl" class="btn btn-neptune">@BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-upload") Upload</a>
                    <a href="@ViewDataTyped.DownloadDelineationUrl" class="btn btn-neptune">@BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-download") Download</a>
                    <h3>Field Visits</h3>
                    @{
                        ViewPageContent.RenderPartialView(Html, ViewDataTyped.FieldTripPage);
                    }
                    <a href="@ViewDataTyped.UploadFieldTripUrl" class="btn btn-neptune">@BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-upload") Upload</a>
                </div>
                <div class="col-md-3 sidebar">
                    <h4>Quick Links:</h4>
                    Tabular data (.csv) can be downloaded from lists throughout the system:
                    <ul>
                        <li>BMP List</li>
                        <li>Field Visits</li>
                        <li>Modeling Attributes</li>
                        <li>BMP Map</li>
                        <li>BMP Types</li>
                    </ul>
                </div>
            </div>
            
            <div role="tabpanel" class="tab-pane " id="wqmps" ng-controller="LoadBasedMapController">
                
            </div>
            <div role="tabpanel" class="tab-pane" id="trashModule" ng-controller="OVTABasedMapController">
            </div>@*OVTABasedMapController*@
        </div>
        <p class="systemText text-danger" id="warnInternetExplorer" style="display: none;">Your browser might not support all features of this map. Please switch to Google Chrome or Mozilla Firefox for the best experience.</p>
    </div>
</div>