@using Neptune.EFModels.Entities
@using Neptune.WebMvc.Common.HtmlHelperExtensions
@using Neptune.WebMvc.Common.BootstrapWrappers
@inherits Neptune.WebMvc.Views.TreatmentBMP.EditModelingAttributes
<div class="row">
    <div class="col-xs-12">
        <div class="validationError">
            @Html.ValidationSummary()
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    <div class="formPage">
        @{ Neptune.WebMvc.Views.Shared.EditAttributes.EditAttributes.RenderPartialView(Html, ViewDataTyped.EditAttributesViewData, Model);}

        <div class="row">
            <hr />
            <div class="col-xs-12 col-sm-2">
                <div><sup>@Html.Raw(BootstrapHtmlHelpers.RequiredIcon)</sup> Required Field</div>
            </div>
            <div class="col-xs-12 col-sm-10" style="text-align: right">
                <button action="p" type="submit" class="btn btn-neptune">Save</button>
                <a href="@ViewDataTyped.ParentDetailUrl" class="btn btn-neptune">Cancel</a>
            </div>
        </div>
    </div>
}