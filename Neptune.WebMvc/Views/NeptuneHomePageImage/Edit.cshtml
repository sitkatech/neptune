@using Neptune.WebMvc.Common.HtmlHelperExtensions
@inherits Neptune.WebMvc.Views.NeptuneHomePageImage.Edit
@model Neptune.WebMvc.Views.NeptuneHomePageImage.EditViewModel

@using (Html.BeginForm(FormMethod.Post, new {enctype = "multipart/form-data"}))
{
    <div class="row form-group">
        <div class="col-md-4">@Html.LabelWithSugarFor(x => x.Caption)</div>
        <div class="col-md-8">
            @Html.TextBoxFor(x => x.Caption, new {style = "width:380px"})
            <div class="smallExplanationText">Be concise yet descriptive. Thumbnails above will display by sort order specified.</div>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-4">@Html.LabelWithSugarFor(x => x.SortOrder)</div>
        <div class="col-md-8">
            @Html.TextBoxFor(x => x.SortOrder, new { style = "width:50px", type = "number" })
        </div>
    </div>
}
