@using Neptune.WebMvc.Common.HtmlHelperExtensions
@using Neptune.WebMvc.Views.Shared
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Neptune.WebMvc.Common.BootstrapWrappers
@inherits Neptune.WebMvc.Views.OnlandVisualTrashAssessmentExport.ExportAssessmentGeospatialData
@model Neptune.WebMvc.Views.OnlandVisualTrashAssessmentExport.ExportAssessmentGeospatialDataViewModel


@section JavascriptAndStylesContent
{
    <style>
        .systemText {
            margin-top: 5px;
        }
        .row {
            margin-top: 5px;
        }
    </style>
}

@{
    ViewPageContent.RenderPartialView(Html, ViewDataTyped.ViewPageContentViewData);
}

@section RightOfPageTitle
{
    <a class="btn btn-warning headerButtonText observationTypeButton" href="@ViewDataTyped.UploadOVTAAreaUrl">@BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-upload") Upload OVTA Areas</a>
}

<form method="post" enctype="multipart/form-data">
    <div class="formPage">
        <div class="row">
            <div class="col-md-6">
                <p>
                    Use this form to download OVTA Areas for a given jurisdiction:
                    <ul>
                        <li>A single ArcGIS file geodatabase containing onland visual trash assessment area features will be produced for the selected jurisdiction.</li>
                        <li>The will contain attributes for Area ID, Area Name,  Jurisdiction, Description</li>
                        <li>This file download is intended to support bulk editing in desktop GIS software and can be re-uploaded to the platform to replace the existing onland visual trash assessment areas utilized in trash results calculations.</li>
                    </ul>
                </p>
            </div>
            <div class="col-md-6">
                <div class="row form-group" style="margin-top: 0px;">
                    <div class="col-md-6">
                        @Html.LabelWithSugarFor(x => x.StormwaterJurisdictionID)
                    </div>
                    <div class="col-md-6">
                        @Html.DropDownListFor(x => x.StormwaterJurisdictionID, ViewDataTyped.StormwaterJurisdictions, new Dictionary<string, object> { { "class", "form-control" } })
                    </div>
                </div>
                </>
                <div class="row">
                    <div class="col-md-12 text-right">
                        <button type="submit" class="btn btn-neptune"><span class="glyphicon glyphicon-download"></span> Download</button>
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>

