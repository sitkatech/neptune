@using Neptune.EFModels.Entities
@using Neptune.WebMvc.Common.HtmlHelperExtensions
@using Neptune.WebMvc.Common.ModalDialog
@using Neptune.Common
@inherits Neptune.WebMvc.Views.WaterQualityManagementPlan.SummaryForMap

<style>
    .keyPhoto {
        margin-left: auto;
        margin-right: auto;
        margin-bottom: 20px;
    }

    .keyPhoto img { max-height: 150px; }

    .noKeyPhoto {
        height: 150px;
        background-color: #f9f9f9;
        margin-bottom: 20px;
    }

    .noKeyPhoto p {
        padding: 55px 5px 0 5px;
    }

    .captionText { font-size: 12px; }
</style>
<div class="row">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-12">
                <h4>@ViewDataTyped.WaterQualityManagementPlan.WaterQualityManagementPlanName</h4>
            </div>            
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-4 col-md-3">
                <div class="row">
                    <div class="col-xs-12">@Html.LabelWithSugarFor(FieldDefinitionType.Jurisdiction, "Jurisdiction"): <a href="@ViewDataTyped.StormwaterJurisdictionDetailUrl">@ViewDataTyped.WaterQualityManagementPlan.StormwaterJurisdiction.GetOrganizationDisplayName()</a></div>
                </div>
                <div class="row">
                    <div class="col-xs-12">Status: @ViewDataTyped.WaterQualityManagementPlan.WaterQualityManagementPlanStatus?.WaterQualityManagementPlanStatusDisplayName</div>
                </div>
                <div class="row">
                    <div class="col-xs-12">@Html.LabelWithSugarFor(FieldDefinitionType.LandUseType, "Land Use Type"): @ViewDataTyped.WaterQualityManagementPlan.WaterQualityManagementPlanLandUse?.WaterQualityManagementPlanLandUseDisplayName</div>
                </div>
                <div class="row">
                    <div class="col-xs-12">Permit Term: @ViewDataTyped.WaterQualityManagementPlan.WaterQualityManagementPlanPermitTerm?.WaterQualityManagementPlanPermitTermDisplayName</div>
                </div>
                <div class="row">
                    <div class="col-xs-12"><a class="btn btn-neptune" href="@ViewDataTyped.WaterQualityManagementPlanDetailUrl">Link</a></div>
                </div>
            </div>
           
        </div>
    </div>
</div>

<script>
    // <![CDATA[
    jQuery(document).ready(function()
    {
        var keyPhoto = jQuery("#keyPhoto");
        keyPhoto.fancybox({ "type": "image" }); //hook up fancybox again.
    });
    // ]]>
</script>