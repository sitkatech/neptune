@using Neptune.WebMvc.Views.Shared
@using Neptune.WebMvc.Common.HtmlHelperExtensions
@using Neptune.WebMvc.Common.BootstrapWrappers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Neptune.WebMvc.Views.OnlandVisualTrashAssessmentArea.BulkUploadOVTAAreasViewModel
@inherits Neptune.WebMvc.Views.OnlandVisualTrashAssessmentArea.BulkUploadOVTAAreas


@{ ViewPageContent.RenderPartialView(Html, ViewDataTyped.ViewPageContentViewData); }

<form method="post" enctype="multipart/form-data">
    <div class="form-horizontal">
        <div class="row form-group" style="margin-top: 0px;">
            <div class="col-md-6">
                @Html.LabelWithSugarFor(x => x.StormwaterJurisdictionID)
            </div>
            <div class="col-md-6">
                @Html.DropDownListFor(x => x.StormwaterJurisdictionID, ViewDataTyped.StormwaterJurisdictions, new Dictionary<string, object> { { "class", "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                @Html.LabelWithSugarFor(m => m.UploadXLSX)
            </div>
            <div class="col-sm-10">
                @Html.EditorFor(m => m.UploadXLSX, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="pull-right">
        <button type="submit" class="btn btn-neptune">@BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon glyphicon-upload") Upload</button>
    </div>
</form>
<a href="@ViewDataTyped.TemplateDownloadUrl" class="btn btn-neptune" download>@BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon glyphicon-download-alt") Download Template</a>
