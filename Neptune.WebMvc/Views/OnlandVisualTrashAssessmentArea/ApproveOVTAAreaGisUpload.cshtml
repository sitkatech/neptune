@using Neptune.WebMvc.Common
@inherits Neptune.WebMvc.Views.OnlandVisualTrashAssessmentArea.ApproveOVTAAreaGisUpload
@model Neptune.WebMvc.Views.OnlandVisualTrashAssessmentArea.ApproveOVTAAreaGisUploadViewModel

@Html.ValidationSummary()

<div class="formPage" style="padding: 0; margin-top: -10px;">
    <div>
        <div id="uploadGisReport">
            @if (ViewDataTyped.OvtaAreaUploadGisReportFromStaging.Errors.Count == 0)
            {
                <div>
                    <ul>
                        <li>The Feature Class contains @ViewDataTyped.OvtaAreaUploadGisReportFromStaging.NumberOfOVTAAreas OVTA Areas</li>
                        <li>@ViewDataTyped.OvtaAreaUploadGisReportFromStaging.NumberOfOVTAAreasToBeUpdated OVTA Areas will be replaced by new geometries from this Feature Class</li>
                        <li>@ViewDataTyped.OvtaAreaUploadGisReportFromStaging.NumberOfOVTAAreasToBeCreated new OVTA Areas will be created from this Feature Class</li>

                    </ul>
                </div>
            }
            else
            {
                <div>
                    <ul>
                        @foreach (var error in ViewDataTyped.OvtaAreaUploadGisReportFromStaging.Errors)
                        {
                            <li class="text-danger">@error</li>
                        }
                    </ul>
                </div>
            }
        </div>
        <div class="text-right" style="margin-top: 15px;">
            <button id="submitApproveOVTAAreaGisUpload" type="submit" class="btn btn-neptune" @ViewDataTyped.OvtaAreaUploadGisReportFromStaging.Errors.Any().ToDisabledOrEmpty()>Accept</button>
            <a href="@ViewDataTyped.OVTAIndexUrl" class="btn btn-neptune">Cancel</a>
        </div>
    </div>
</div>